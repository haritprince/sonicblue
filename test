  <script>
    // ‡∏ï‡∏±‡∏ß‡πÅ‡∏õ‡∏£‡∏´‡∏•‡∏±‡∏Å
    const passwordInput = document.getElementById('password');
    const passwordStatus = document.getElementById('password-status');
    const loading = document.getElementById('loading');
    const passwordContainer = document.getElementById('password-container');
    const mainMenu = document.getElementById('main-menu');
    const formContainer = document.getElementById('form-container');
    const databaseContainer = document.getElementById('database-container');
    const idCardInput = document.getElementById('id-card');
    const idCardStatus = document.getElementById('id-card-status');
    const phoneInput = document.getElementById('phone');
    const phoneStatus = document.getElementById('phone-status');
    const birthdateInput = document.getElementById('birthdate');
    const ageDisplay = document.getElementById('age-display');
    const imageUpload = document.getElementById('image-upload');
    const saveButton = document.getElementById('save-button');
    const updateButton = document.getElementById('update-button');
    const cancelButton = document.getElementById('cancel-button');
    const recordIdInput = document.getElementById('record-id');
    const existingImageUrlInput = document.getElementById('existing-image-url');
    const currentImageContainer = document.getElementById('current-image-container');
    const currentImage = document.getElementById('current-image');
    
    let isEditMode = false;
    let currentRecord = null; // ‡πÄ‡∏Å‡πá‡∏ö‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡∏õ‡∏±‡∏à‡∏à‡∏∏‡∏ö‡∏±‡∏ô‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö PDF
    
    // ‡πÅ‡∏õ‡∏•‡∏á‡πÄ‡∏î‡∏∑‡∏≠‡∏ô‡∏†‡∏≤‡∏©‡∏≤‡∏≠‡∏±‡∏á‡∏Å‡∏§‡∏©‡πÄ‡∏õ‡πá‡∏ô‡∏†‡∏≤‡∏©‡∏≤‡πÑ‡∏ó‡∏¢
    const monthNamesEN = ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'];
    const monthNamesTH = ['‡∏°‡∏Å‡∏£‡∏≤‡∏Ñ‡∏°', '‡∏Å‡∏∏‡∏°‡∏†‡∏≤‡∏û‡∏±‡∏ô‡∏ò‡πå', '‡∏°‡∏µ‡∏ô‡∏≤‡∏Ñ‡∏°', '‡πÄ‡∏°‡∏©‡∏≤‡∏¢‡∏ô', '‡∏û‡∏§‡∏©‡∏†‡∏≤‡∏Ñ‡∏°', '‡∏°‡∏¥‡∏ñ‡∏∏‡∏ô‡∏≤‡∏¢‡∏ô', '‡∏Å‡∏£‡∏Å‡∏é‡∏≤‡∏Ñ‡∏°', '‡∏™‡∏¥‡∏á‡∏´‡∏≤‡∏Ñ‡∏°', '‡∏Å‡∏±‡∏ô‡∏¢‡∏≤‡∏¢‡∏ô', '‡∏ï‡∏∏‡∏•‡∏≤‡∏Ñ‡∏°', '‡∏û‡∏§‡∏®‡∏à‡∏¥‡∏Å‡∏≤‡∏¢‡∏ô', '‡∏ò‡∏±‡∏ô‡∏ß‡∏≤‡∏Ñ‡∏°'];
    const shortMonthNamesTH = ['‡∏°.‡∏Ñ.', '‡∏Å.‡∏û.', '‡∏°‡∏µ.‡∏Ñ.', '‡πÄ‡∏°.‡∏¢.', '‡∏û.‡∏Ñ.', '‡∏°‡∏¥.‡∏¢.', '‡∏Å.‡∏Ñ.', '‡∏™.‡∏Ñ.', '‡∏Å.‡∏¢.', '‡∏ï.‡∏Ñ.', '‡∏û.‡∏¢.', '‡∏ò.‡∏Ñ.'];
    
    // ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡πÅ‡∏õ‡∏•‡∏á‡∏ß‡∏±‡∏ô‡∏ó‡∏µ‡πà‡πÄ‡∏õ‡πá‡∏ô‡∏£‡∏π‡∏õ‡πÅ‡∏ö‡∏ö‡πÑ‡∏ó‡∏¢
    function formatThaiDateTime(dateTimeStr, includeTime = true) {
      if (!dateTimeStr) return "-";
      
      const date = new Date(dateTimeStr);
      if (isNaN(date.getTime())) return dateTimeStr;
      
      const day = date.getDate();
      const month = shortMonthNamesTH[date.getMonth()];
      const year = date.getFullYear() + 543;
      
      let thaiDate = `${day} ${month} ${year}`;
      
      if (includeTime) {
        const hours = date.getHours().toString().padStart(2, '0');
        const minutes = date.getMinutes().toString().padStart(2, '0');
        thaiDate += ` ${hours}:${minutes} ‡∏ô.`;
      }
      
      return thaiDate;
    }
    
    // ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡πÅ‡∏õ‡∏•‡∏á‡∏£‡∏π‡∏õ‡πÅ‡∏ö‡∏ö‡∏ß‡∏±‡∏ô‡∏ó‡∏µ‡πà‡πÑ‡∏ó‡∏¢ (‡∏Å‡∏£‡∏ì‡∏µ‡∏ó‡∏µ‡πà‡πÄ‡∏õ‡πá‡∏ô‡∏™‡∏ï‡∏£‡∏¥‡∏á‡∏ß‡∏±‡∏ô/‡πÄ‡∏î‡∏∑‡∏≠‡∏ô/‡∏õ‡∏µ)
    function formatThaiDateString(dateStr) {
      if (!dateStr) return "-";
      
      console.log("Input date string:", dateStr);
      
      // ‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡∏£‡∏π‡∏õ‡πÅ‡∏ö‡∏ö ‡∏ß‡∏±‡∏ô/‡πÄ‡∏î‡∏∑‡∏≠‡∏ô/‡∏õ‡∏µ
      const parts = dateStr.split('/');
      if (parts.length === 3) {
        try {
          const day = parseInt(parts[0]);
          const month = parseInt(parts[1]);
          const year = parseInt(parts[2]);
          
          console.log(`Parsed as day/month/year: ${day}/${month}/${year}`);
          
          // ‡∏ñ‡πâ‡∏≤‡πÄ‡∏õ‡πá‡∏ô‡πÄ‡∏•‡∏Ç‡∏ñ‡∏π‡∏Å‡∏ï‡πâ‡∏≠‡∏á ‡πÉ‡∏´‡πâ‡πÅ‡∏õ‡∏•‡∏á‡πÄ‡∏õ‡πá‡∏ô‡∏£‡∏π‡∏õ‡πÅ‡∏ö‡∏ö‡∏†‡∏≤‡∏©‡∏≤‡πÑ‡∏ó‡∏¢
          if (!isNaN(day) && !isNaN(month) && !isNaN(year) && month >= 1 && month <= 12) {
            // ‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡∏ß‡πà‡∏≤‡πÄ‡∏õ‡πá‡∏ô‡∏õ‡∏µ ‡∏û.‡∏®. ‡∏´‡∏£‡∏∑‡∏≠ ‡∏Ñ.‡∏®.
            let fullYear = year;
            if (year < 100) { // ‡∏õ‡∏µ‡πÅ‡∏ö‡∏ö‡∏¢‡πà‡∏≠ ‡πÄ‡∏ä‡πà‡∏ô 66 -> 2566
              fullYear = year + 2500;
            } else if (year >= 100 && year < 2000) { // ‡∏õ‡∏µ‡πÉ‡∏ô‡∏ä‡πà‡∏ß‡∏á 100-1999 -> ‡∏ô‡πà‡∏≤‡∏à‡∏∞‡πÄ‡∏õ‡πá‡∏ô‡∏û‡∏∏‡∏ó‡∏ò‡∏®‡∏±‡∏Å‡∏£‡∏≤‡∏ä‡∏≠‡∏¢‡∏π‡πà‡πÅ‡∏•‡πâ‡∏ß
              fullYear = year;
            } else if (year >= 2000 && year < 2500) { // ‡∏õ‡∏µ ‡∏Ñ.‡∏®. ‡πÄ‡∏ä‡πà‡∏ô 2023 -> 2566
              fullYear = year + 543;
            } else if (year >= 2500) { // ‡∏ñ‡πâ‡∏≤‡∏°‡∏≤‡∏Å‡∏Å‡∏ß‡πà‡∏≤ 2500 ‡∏ñ‡∏∑‡∏≠‡∏ß‡πà‡∏≤‡πÄ‡∏õ‡πá‡∏ô ‡∏û.‡∏®. ‡∏≠‡∏¢‡∏π‡πà‡πÅ‡∏•‡πâ‡∏ß ‡πÅ‡∏ï‡πà‡∏ñ‡πâ‡∏≤‡∏°‡∏≤‡∏Å‡πÄ‡∏Å‡∏¥‡∏ô‡πÑ‡∏õ ‡∏≠‡∏≤‡∏à‡∏à‡∏∞‡πÄ‡∏õ‡πá‡∏ô ‡∏Ñ.‡∏®.
              if (year - 543 >= 2000 && year - 543 < 2100) { // ‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡∏ß‡πà‡∏≤‡∏ñ‡πâ‡∏≤‡∏•‡∏ö 543 ‡πÅ‡∏•‡πâ‡∏ß‡∏≠‡∏¢‡∏π‡πà‡πÉ‡∏ô‡∏ä‡πà‡∏ß‡∏á ‡∏Ñ.‡∏®. ‡∏ó‡∏µ‡πà‡∏ô‡πà‡∏≤‡∏à‡∏∞‡πÄ‡∏õ‡πá‡∏ô‡πÑ‡∏õ‡πÑ‡∏î‡πâ
                fullYear = year - 543 + 543; // ‡πÄ‡∏≠‡∏≤‡πÑ‡∏ß‡πâ‡πÅ‡∏ö‡∏ö‡πÄ‡∏î‡∏¥‡∏°
              } else {
                fullYear = year; // ‡πÄ‡∏õ‡πá‡∏ô ‡∏û.‡∏®. ‡∏≠‡∏¢‡∏π‡πà‡πÅ‡∏•‡πâ‡∏ß
              }
            }
            
            const result = `${day} ${monthNamesTH[month-1]} ${fullYear}`;
            console.log("Returning formatted date:", result);
            return result;
          }
        } catch (e) {
          console.error("Error parsing date string:", e);
        }
      }
      
      // ‡∏•‡∏≠‡∏á‡πÅ‡∏õ‡∏•‡∏á‡∏à‡∏≤‡∏Å‡∏£‡∏π‡∏õ‡πÅ‡∏ö‡∏ö‡∏≠‡∏∑‡πà‡∏ô‡πÜ
      try {
        // ‡∏•‡∏≠‡∏á‡πÅ‡∏õ‡∏•‡∏á‡∏à‡∏≤‡∏Å‡∏£‡∏π‡∏õ‡πÅ‡∏ö‡∏ö ISO ‡∏´‡∏£‡∏∑‡∏≠‡∏£‡∏π‡∏õ‡πÅ‡∏ö‡∏ö‡∏≠‡∏∑‡πà‡∏ô‡πÜ ‡∏ó‡∏µ‡πà JavaScript ‡∏£‡∏≠‡∏á‡∏£‡∏±‡∏ö
        const date = new Date(dateStr);
        if (!isNaN(date.getTime())) {
          const day = date.getDate();
          const month = date.getMonth();
          const year = date.getFullYear();
          
          console.log(`Parsed date object: ${day}/${month+1}/${year}`);
          
          // ‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡∏ß‡πà‡∏≤‡∏õ‡∏µ‡πÄ‡∏õ‡πá‡∏ô ‡∏û.‡∏®. ‡∏´‡∏£‡∏∑‡∏≠ ‡∏Ñ.‡∏®.
          let thaiYear = year;
          
          // ‡πÄ‡∏õ‡πá‡∏ô ‡∏Ñ.‡∏®. ‡∏ï‡πâ‡∏≠‡∏á‡∏ö‡∏ß‡∏Å 543
          if (year >= 1900 && year < 2100) {
            thaiYear = year + 543; 
          }
          
          const result = `${day} ${monthNamesTH[month]} ${thaiYear}`;
          console.log("Returning formatted date from Date object:", result);
          return result;
        }
      } catch (e) {
        console.error("Error converting date format:", e);
      }
      
      // ‡∏ñ‡πâ‡∏≤‡πÑ‡∏°‡πà‡∏ï‡∏£‡∏á‡∏Å‡∏±‡∏ö‡∏£‡∏π‡∏õ‡πÅ‡∏ö‡∏ö‡∏ó‡∏µ‡πà‡∏Ñ‡∏≤‡∏î‡∏´‡∏ß‡∏±‡∏á ‡∏´‡∏£‡∏∑‡∏≠‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î ‡πÉ‡∏´‡πâ‡∏Ñ‡∏∑‡∏ô‡∏Ñ‡πà‡∏≤‡πÄ‡∏î‡∏¥‡∏°
      return dateStr;
    }
    
    // ‡∏ü‡∏±‡∏á‡∏ä‡∏±‡πà‡∏ô‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡πÄ‡∏•‡∏Ç‡∏ö‡∏±‡∏ï‡∏£‡∏ß‡πà‡∏≤‡∏Ñ‡∏£‡∏ö‡∏ñ‡πâ‡∏ß‡∏ô‡∏´‡∏£‡∏∑‡∏≠‡πÑ‡∏°‡πà
    function validateIDCard() {
      const idCard = idCardInput.value;
      if (idCard.length !== 13 || isNaN(idCard)) {
        idCardStatus.textContent = '‚ùå‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏Å‡∏£‡∏≠‡∏Å‡πÄ‡∏•‡∏Ç‡∏ö‡∏±‡∏ï‡∏£‡∏õ‡∏£‡∏∞‡∏ä‡∏≤‡∏ä‡∏ô‡πÉ‡∏´‡πâ‡∏Ñ‡∏£‡∏ö13‡∏´‡∏•‡∏±‡∏Å';
        idCardStatus.classList.remove('hidden');
        return false;
      } else {
        idCardStatus.textContent = '';
        idCardStatus.classList.add('hidden');
        return true;
      }
    }

    // ‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡πÄ‡∏ö‡∏≠‡∏£‡πå‡πÇ‡∏ó‡∏£‡∏ß‡πà‡∏≤‡∏Å‡∏£‡∏≠‡∏Å‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏ñ‡∏π‡∏Å‡∏ï‡πâ‡∏≠‡∏á‡∏´‡∏£‡∏∑‡∏≠‡πÑ‡∏°‡πà
    function validatePhone() {
      const phoneNumbers = phoneInput.value.split('/').map(num => num.trim());
      let isValid = true;
      let errorMessages = [];

      phoneNumbers.forEach((phone, index) => {
        if (!/^0[0-9]{9}$/.test(phone)) {
          isValid = false;
          errorMessages.push(`‚ùå‡πÄ‡∏ö‡∏≠‡∏£‡πå‡πÇ‡∏ó‡∏£‡∏ó‡∏µ‡πà${index + 1}: "${phone}" ‡πÑ‡∏°‡πà‡∏ñ‡∏π‡∏Å‡∏ï‡πâ‡∏≠‡∏á(‡∏ï‡πâ‡∏≠‡∏á‡∏Ç‡∏∂‡πâ‡∏ô‡∏ï‡πâ‡∏ô‡∏î‡πâ‡∏ß‡∏¢0‡πÅ‡∏•‡∏∞‡∏ï‡∏≤‡∏°‡∏î‡πâ‡∏ß‡∏¢9‡∏´‡∏•‡∏±‡∏Å)`);
        }
      });

      if (!isValid) {
        phoneStatus.innerHTML = errorMessages.join('<br>');
        return false;
      } else {
        phoneStatus.textContent = '';
        return true;
      }
    }

    // ‡∏ü‡∏±‡∏á‡∏ä‡∏±‡πà‡∏ô‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏öPassword ‡πÄ‡∏£‡∏µ‡∏¢‡∏Å‡∏ñ‡∏≤‡∏°‡∏à‡∏≤‡∏ÅGoogleScript
    function checkPassword() {
      const password = passwordInput.value;
      showLoading();

      google.script.run
        .withSuccessHandler(function(response) {
          hideLoading();
          if (response.status === 'success') {
            passwordContainer.classList.add('hidden');
            mainMenu.classList.remove('hidden');
          } else {
            Swal.fire({
              title: "‡∏£‡∏´‡∏±‡∏™‡∏ú‡πà‡∏≤‡∏ô‡πÑ‡∏°‡πà‡∏ñ‡∏π‡∏Å‡∏ï‡πâ‡∏≠‡∏á",
              text: "‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏Å‡∏£‡∏≠‡∏Å‡∏£‡∏´‡∏±‡∏™‡∏ú‡πà‡∏≤‡∏ô‡∏≠‡∏µ‡∏Å‡∏Ñ‡∏£‡∏±‡πâ‡∏á",
              icon: "error",
              confirmButtonText: "‡∏ï‡∏Å‡∏•‡∏á",
            });
            passwordStatus.textContent = '';
          }
        })
        .withFailureHandler(function(error) {
          hideLoading();
          Swal.fire({
            title: "‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î",
            text: "‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡∏£‡∏´‡∏±‡∏™‡∏ú‡πà‡∏≤‡∏ô‡πÑ‡∏î‡πâ: " + error.message,
            icon: "error",
            confirmButtonText: "‡∏ï‡∏Å‡∏•‡∏á",
          });
        })
        .checkPassword(password);
    }
    
    // ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏≠‡∏≠‡∏Å‡∏à‡∏≤‡∏Å‡∏£‡∏∞‡∏ö‡∏ö
    function logout() {
      Swal.fire({
        title: "‡∏ï‡πâ‡∏≠‡∏á‡∏Å‡∏≤‡∏£‡∏≠‡∏≠‡∏Å‡∏à‡∏≤‡∏Å‡∏£‡∏∞‡∏ö‡∏ö?",
        text: "‡∏Ñ‡∏∏‡∏ì‡∏Å‡∏≥‡∏•‡∏±‡∏á‡∏à‡∏∞‡∏≠‡∏≠‡∏Å‡∏à‡∏≤‡∏Å‡∏£‡∏∞‡∏ö‡∏ö Detective-X",
        icon: "warning",
        showCancelButton: true,
        confirmButtonText: "‡∏≠‡∏≠‡∏Å‡∏à‡∏≤‡∏Å‡∏£‡∏∞‡∏ö‡∏ö",
        cancelButtonText: "‡∏¢‡∏Å‡πÄ‡∏•‡∏¥‡∏Å"
      }).then((result) => {
        if (result.isConfirmed) {
          mainMenu.classList.add('hidden');
          passwordContainer.classList.remove('hidden');
          passwordInput.value = '';
        }
      });
    }
    
    // ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡πÑ‡∏õ‡∏ó‡∏µ‡πà‡∏´‡∏ô‡πâ‡∏≤‡∏´‡∏•‡∏±‡∏Å
    function backToMainMenu() {
      resetForm();
      formContainer.classList.add('hidden');
      databaseContainer.classList.add('hidden');
      mainMenu.classList.remove('hidden');
    }
    
    // ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡πÅ‡∏™‡∏î‡∏á‡∏ü‡∏≠‡∏£‡πå‡∏°
    function showForm() {
      mainMenu.classList.add('hidden');
      formContainer.classList.remove('hidden');
      // ‡∏ï‡∏±‡πâ‡∏á‡∏Ñ‡πà‡∏≤‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏ï‡πâ‡∏ô‡∏ß‡∏±‡∏ô‡∏ó‡∏µ‡πà
      const now = new Date();
      const localDatetime = new Date(now.getTime() - (now.getTimezoneOffset() * 60000))
        .toISOString()
        .slice(0, 16);
      document.getElementById('datetime').value = localDatetime;
    }
    
    // ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡πÅ‡∏™‡∏î‡∏á‡∏ê‡∏≤‡∏ô‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•
    function showDatabase() {
      mainMenu.classList.add('hidden');
      databaseContainer.classList.remove('hidden');
      
      // ‡πÅ‡∏™‡∏î‡∏á‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏ß‡∏≤‡∏°‡∏Å‡∏≥‡∏•‡∏±‡∏á‡πÇ‡∏´‡∏•‡∏î
      const tableBody = document.getElementById('data-body');
      tableBody.innerHTML = '<tr><td colspan="9" class="p-6 text-center">‡∏Å‡∏≥‡∏•‡∏±‡∏á‡πÇ‡∏´‡∏•‡∏î‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•... <i class="fas fa-spinner fa-spin"></i></td></tr>';
      
      // ‡∏™‡∏±‡πà‡∏á‡πÇ‡∏´‡∏•‡∏î‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•
      fetchRecords();
    }
    
    // ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏î‡∏∂‡∏á‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î‡∏à‡∏≤‡∏Å‡∏ê‡∏≤‡∏ô‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•
    function fetchRecords() {
      showLoading();
      
      // ‡πÅ‡∏™‡∏î‡∏á‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏ß‡∏≤‡∏°‡∏Å‡∏≥‡∏•‡∏±‡∏á‡πÇ‡∏´‡∏•‡∏î
      document.getElementById('data-body').innerHTML = `
        <tr>
          <td colspan="9" class="p-6 text-center">
            <div class="flex flex-col items-center justify-center">
              <div class="loading-spinner mb-4"></div>
              <p>‡∏Å‡∏≥‡∏•‡∏±‡∏á‡πÇ‡∏´‡∏•‡∏î‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏à‡∏≤‡∏Å‡πÄ‡∏ã‡∏¥‡∏£‡πå‡∏ü‡πÄ‡∏ß‡∏≠‡∏£‡πå...</p>
            </div>
          </td>
        </tr>
      `;
      
      try {
        google.script.run
          .withSuccessHandler(function(response) {
            hideLoading();
            
            console.log("Server response (fetchRecords):", response);
            
            // ‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡∏ß‡πà‡∏≤‡πÑ‡∏î‡πâ‡∏£‡∏±‡∏ö‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏´‡∏£‡∏∑‡∏≠‡πÑ‡∏°‡πà
            if (response === undefined || response === null) {
              console.error("‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏ó‡∏µ‡πà‡πÑ‡∏î‡πâ‡∏£‡∏±‡∏ö‡∏à‡∏≤‡∏Å‡πÄ‡∏ã‡∏¥‡∏£‡πå‡∏ü‡πÄ‡∏ß‡∏≠‡∏£‡πå");
              document.getElementById('data-body').innerHTML = `
                <tr>
                  <td colspan="9" class="p-6 text-center text-red-500">
                    <i class="fas fa-exclamation-triangle mr-2"></i>
                    ‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡πÄ‡∏ä‡∏∑‡πà‡∏≠‡∏°‡∏ï‡πà‡∏≠‡∏Å‡∏±‡∏ö‡∏ê‡∏≤‡∏ô‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡πÑ‡∏î‡πâ ‡πÇ‡∏õ‡∏£‡∏î‡∏•‡∏≠‡∏á‡∏≠‡∏µ‡∏Å‡∏Ñ‡∏£‡∏±‡πâ‡∏á
                  </td>
                </tr>
              `;
              return;
            }
            
            // ‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡∏ß‡πà‡∏≤‡πÄ‡∏õ‡πá‡∏ô‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î‡∏´‡∏£‡∏∑‡∏≠‡πÑ‡∏°‡πà
            if (response && response.status === 'error') {
              console.error("Server error:", response.message);
              Swal.fire({
                title: "‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î",
                text: response.message || "‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡∏î‡∏∂‡∏á‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡πÑ‡∏î‡πâ",
                icon: "error",
                confirmButtonText: "‡∏ï‡∏Å‡∏•‡∏á",
              });
              return;
            }
            
            // ‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡∏ß‡πà‡∏≤ response ‡πÄ‡∏õ‡πá‡∏ô array ‡∏´‡∏£‡∏∑‡∏≠‡πÑ‡∏°‡πà
            if (Array.isArray(response)) {
              console.log("‡∏à‡∏≥‡∏ô‡∏ß‡∏ô‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏ó‡∏µ‡πà‡πÑ‡∏î‡πâ‡∏£‡∏±‡∏ö:", response.length);
              displayRecords(response);
            } else {
              console.error("‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏ó‡∏µ‡πà‡πÑ‡∏î‡πâ‡∏£‡∏±‡∏ö‡πÑ‡∏°‡πà‡πÉ‡∏ä‡πà‡∏≠‡∏≤‡∏£‡πå‡πÄ‡∏£‡∏¢‡πå:", response);
              document.getElementById('data-body').innerHTML = `
                <tr>
                  <td colspan="9" class="p-6 text-center text-red-500">
                    <i class="fas fa-exclamation-triangle mr-2"></i>
                    ‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏ó‡∏µ‡πà‡πÑ‡∏î‡πâ‡∏£‡∏±‡∏ö‡πÑ‡∏°‡πà‡∏ñ‡∏π‡∏Å‡∏ï‡πâ‡∏≠‡∏á ‡πÇ‡∏õ‡∏£‡∏î‡∏ï‡∏¥‡∏î‡∏ï‡πà‡∏≠‡∏ú‡∏π‡πâ‡∏î‡∏π‡πÅ‡∏•‡∏£‡∏∞‡∏ö‡∏ö
                  </td>
                </tr>
              `;
            }
          })
          .withFailureHandler(function(error) {
            hideLoading();
            console.error("Error fetching records:", error);
            
            document.getElementById('data-body').innerHTML = `
              <tr>
                <td colspan="9" class="p-6 text-center text-red-500">
                  <i class="fas fa-exclamation-triangle mr-2"></i>
                  ‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î‡πÉ‡∏ô‡∏Å‡∏≤‡∏£‡πÄ‡∏ä‡∏∑‡πà‡∏≠‡∏°‡∏ï‡πà‡∏≠‡∏Å‡∏±‡∏ö‡∏ê‡∏≤‡∏ô‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏• 
                  <button onclick="refreshDatabase()" class="ml-2 bg-blue-500 text-white px-3 py-1 rounded btn-3d">
                    ‡∏•‡∏≠‡∏á‡πÉ‡∏´‡∏°‡πà
                  </button>
                </td>
              </tr>
            `;
          })
          .getRecords();
      } catch (e) {
        hideLoading();
        console.error("Client-side error:", e);
        document.getElementById('data-body').innerHTML = `
          <tr>
            <td colspan="9" class="p-6 text-center text-red-500">
              <i class="fas fa-exclamation-triangle mr-2"></i>
              ‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î‡∏ó‡∏µ‡πà‡πÑ‡∏°‡πà‡∏Ñ‡∏≤‡∏î‡∏Ñ‡∏¥‡∏î: ${e.message}
            </td>
          </tr>
        `;
      }
    }
    
    // ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏£‡∏µ‡πÄ‡∏ü‡∏£‡∏ä‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•
    function refreshDatabase() {
      document.getElementById('search-input').value = '';
      fetchRecords();
    }
    
    // ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡πÅ‡∏™‡∏î‡∏á‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡πÉ‡∏ô‡∏ï‡∏≤‡∏£‡∏≤‡∏á
    function displayRecords(records) {
      const tableBody = document.getElementById('data-body');
      tableBody.innerHTML = '';
      
      if (!records || records.length === 0) {
        tableBody.innerHTML = '<tr><td colspan="9" class="p-6 text-center">‡πÑ‡∏°‡πà‡∏û‡∏ö‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•</td></tr>';
        return;
      }
      
      console.log("‡∏Å‡∏≥‡∏•‡∏±‡∏á‡πÅ‡∏™‡∏î‡∏á‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏• " + records.length + " ‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£");
      
      records.forEach((record, index) => {
        const row = document.createElement('tr');
        row.className = index % 2 === 0 ? 'bg-white' : 'bg-gray-50';
        
        // ‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡∏Ñ‡πà‡∏≤ null ‡∏´‡∏£‡∏∑‡∏≠ undefined ‡πÅ‡∏•‡∏∞‡πÅ‡∏ó‡∏ô‡∏î‡πâ‡∏ß‡∏¢‡∏Ñ‡πà‡∏≤‡∏ß‡πà‡∏≤‡∏á
        const safePrefix = record.prefix || '';
        const safeFullName = record.fullName || '';
        const safeIdCard = record.idCard || '';
        const safeAge = record.age || '';
        const safePhone = record.phone || '';
        const safeLocation = record.location || '';
        
        const hasImage = record.imageUrl && record.imageUrl.trim() !== '';
        
        // ‡∏™‡∏£‡πâ‡∏≤‡∏á‡∏ä‡∏∑‡πà‡∏≠‡∏ó‡∏µ‡πà‡∏ñ‡∏π‡∏Å‡∏ï‡πâ‡∏≠‡∏á‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö‡πÉ‡∏ä‡πâ‡πÉ‡∏ô onclick ‡πÇ‡∏î‡∏¢‡∏ó‡∏≥ escape single quotes
        const escapedName = (safePrefix + ' ' + safeFullName).replace(/'/g, "\\'");
        const escapedUrl = record.imageUrl ? record.imageUrl.replace(/'/g, "\\'") : '';
        
        row.innerHTML = `
          <td class="p-2 border text-center">${index + 1}</td>
          <td class="p-2 border thai-date">${formatThaiDateTime(record.datetime)}</td>
          <td class="p-2 border">${safeIdCard}</td>
          <td class="p-2 border">${safePrefix} ${safeFullName}</td>
          <td class="p-2 border text-center">${safeAge}</td>
          <td class="p-2 border">${safePhone}</td>
          <td class="p-2 border">${safeLocation}</td>
          <td class="p-2 border text-center">
            ${hasImage ? `
              <button onclick="showImage('${escapedUrl}', '${escapedName}')" 
                class="bg-blue-500 text-white px-3 py-1 rounded hover:bg-blue-600 transition duration-300 btn-3d">
                <i class="fas fa-image"></i> ‡∏î‡∏π‡∏£‡∏π‡∏õ
              </button>
            ` : '‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏£‡∏π‡∏õ'}
          </td>
          <td class="p-2 border">
            <div class="flex flex-col space-y-1 md:flex-row md:space-y-0 md:space-x-1">
              <button onclick="viewDetails(${index})" 
                class="bg-blue-500 text-white px-2 py-1 rounded text-sm hover:bg-blue-600 transition duration-300 btn-3d">
                <i class="fas fa-eye"></i> ‡∏î‡∏π‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•
              </button>
              <button onclick="editRecord(${index})" 
                class="bg-yellow-500 text-white px-2 py-1 rounded text-sm hover:bg-yellow-600 transition duration-300 btn-3d">
                <i class="fas fa-edit"></i> ‡πÅ‡∏Å‡πâ‡πÑ‡∏Ç
              </button>
              <button onclick="confirmDeleteRecord(${index})" 
                class="bg-red-500 text-white px-2 py-1 rounded text-sm hover:bg-red-600 transition duration-300 btn-3d">
                <i class="fas fa-trash"></i> ‡∏•‡∏ö
              </button>
            </div>
          </td>
        `;
        
        tableBody.appendChild(row);
      });
      
      // ‡πÄ‡∏Å‡πá‡∏ö‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡πÑ‡∏ß‡πâ‡πÉ‡∏ä‡πâ‡∏ï‡∏≠‡∏ô‡∏Ñ‡πâ‡∏ô‡∏´‡∏≤‡πÅ‡∏•‡∏∞‡πÅ‡∏Å‡πâ‡πÑ‡∏Ç
      window.allRecords = records;
    }
    
    // ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏Ñ‡πâ‡∏ô‡∏´‡∏≤‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•
    function searchRecords() {
      const searchTerm = document.getElementById('search-input').value.toLowerCase();
      
      if (!window.allRecords) return;
      
      let filteredRecords;
      
      if (searchTerm.trim() === '') {
        filteredRecords = window.allRecords;
      } else {
        filteredRecords = window.allRecords.filter(record => {
          return (
            (record.idCard && record.idCard.toLowerCase().includes(searchTerm)) ||
            (record.fullName && record.fullName.toLowerCase().includes(searchTerm)) ||
            (record.phone && record.phone.toLowerCase().includes(searchTerm)) ||
            (record.location && record.location.toLowerCase().includes(searchTerm))
          );
        });
      }
      
      displayRecords(filteredRecords);
    }
    
    // ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡πÄ‡∏õ‡∏¥‡∏î‡πÇ‡∏°‡∏î‡∏≠‡∏•‡∏£‡∏π‡∏õ‡∏†‡∏≤‡∏û
    function showImage(imageUrl, personName) {
      // ‡∏õ‡πâ‡∏≠‡∏á‡∏Å‡∏±‡∏ô‡∏Å‡∏≤‡∏£‡∏Ç‡∏¢‡∏≤‡∏¢‡∏†‡∏≤‡∏û‡∏´‡∏≤‡∏Å‡∏Å‡∏î‡∏à‡∏≤‡∏Å‡∏†‡∏≤‡∏¢‡πÉ‡∏ô‡πÇ‡∏°‡∏î‡∏≠‡∏•‡∏£‡∏≤‡∏¢‡∏•‡∏∞‡πÄ‡∏≠‡∏µ‡∏¢‡∏î
      if (event && event.stopPropagation) {
        event.stopPropagation();
      }
      
      const modalImage = document.getElementById('modal-image');
      const modalTitle = document.getElementById('modal-title');
      const directImageLink = document.getElementById('direct-image-link');
      const imageLoading = document.getElementById('image-loading');
      const imageError = document.getElementById('image-error');
      
      // ‡∏£‡∏µ‡πÄ‡∏ã‡πá‡∏ï‡∏™‡∏ñ‡∏≤‡∏ô‡∏∞
      modalImage.classList.add('hidden');
      imageLoading.classList.remove('hidden');
      imageError.classList.add('hidden');
      
      // ‡∏Å‡∏≥‡∏´‡∏ô‡∏î‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•
      modalTitle.textContent = `‡∏£‡∏π‡∏õ‡∏†‡∏≤‡∏û‡∏Ç‡∏≠‡∏á ${personName}`;
      modalImage.src = imageUrl;
      directImageLink.href = imageUrl;
      
      // ‡πÅ‡∏™‡∏î‡∏á‡πÇ‡∏°‡∏î‡∏≠‡∏•
      document.getElementById('image-modal').classList.remove('hidden');
      
      // ‡∏•‡πá‡∏≠‡∏Å‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö
      console.log("‡πÅ‡∏™‡∏î‡∏á‡∏£‡∏π‡∏õ‡∏†‡∏≤‡∏û:", imageUrl);
    }
    
    // ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏à‡∏±‡∏î‡∏Å‡∏≤‡∏£‡∏Å‡∏£‡∏ì‡∏µ‡πÇ‡∏´‡∏•‡∏î‡∏£‡∏π‡∏õ‡∏†‡∏≤‡∏û‡πÑ‡∏°‡πà‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à
    function handleImageError(imgElement) {
      console.error("‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡πÇ‡∏´‡∏•‡∏î‡∏£‡∏π‡∏õ‡∏†‡∏≤‡∏û‡πÑ‡∏î‡πâ:", imgElement.src);
      document.getElementById('image-loading').classList.add('hidden');
      document.getElementById('image-error').classList.remove('hidden');
      imgElement.classList.add('hidden');
    }
    
    // ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏õ‡∏¥‡∏î‡πÇ‡∏°‡∏î‡∏≠‡∏•‡∏£‡∏π‡∏õ‡∏†‡∏≤‡∏û
    function closeImageModal() {
      document.getElementById('image-modal').classList.add('hidden');
      
      // ‡∏£‡∏µ‡πÄ‡∏ã‡πá‡∏ï‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏£‡∏π‡∏õ‡∏†‡∏≤‡∏û
      setTimeout(() => {
        document.getElementById('modal-image').src = '';
      }, 300);
    }
    
    // ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏î‡∏π‡∏£‡∏≤‡∏¢‡∏•‡∏∞‡πÄ‡∏≠‡∏µ‡∏¢‡∏î
    function viewDetails(index) {
      const record = window.allRecords[index];
      currentRecord = record; // ‡πÄ‡∏Å‡πá‡∏ö‡πÑ‡∏ß‡πâ‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö‡πÉ‡∏ä‡πâ‡πÉ‡∏ô‡∏Å‡∏≤‡∏£‡∏™‡πà‡∏á‡∏≠‡∏≠‡∏Å PDF
      const detailTitle = document.getElementById('detail-title');
      const detailContent = document.getElementById('detail-content');
      
      detailTitle.textContent = `‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏Ç‡∏≠‡∏á ${record.prefix || ''} ${record.fullName || ''}`;
      
      const hasImage = record.imageUrl && record.imageUrl.trim() !== '';
      
      // ‡∏ó‡∏≥‡∏Å‡∏≤‡∏£‡πÄ‡∏≠‡∏™‡πÄ‡∏Ñ‡∏õ URL ‡πÅ‡∏•‡∏∞‡∏ä‡∏∑‡πà‡∏≠‡πÄ‡∏û‡∏∑‡πà‡∏≠‡∏õ‡πâ‡∏≠‡∏á‡∏Å‡∏±‡∏ô‡∏Å‡∏≤‡∏£‡∏´‡∏•‡∏∏‡∏î‡∏Ç‡∏≠‡∏á‡πÄ‡∏Ñ‡∏£‡∏∑‡πà‡∏≠‡∏á‡∏´‡∏°‡∏≤‡∏¢‡∏Ñ‡∏≥‡∏û‡∏π‡∏î
      const escapedImageUrl = hasImage ? record.imageUrl.replace(/'/g, "\\'") : '';
      const escapedName = `${(record.prefix || '')} ${(record.fullName || '')}`.replace(/'/g, "\\'");
      
      // ‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡πÅ‡∏•‡∏∞‡πÅ‡∏õ‡∏•‡∏á‡∏ß‡∏±‡∏ô‡∏ó‡∏µ‡πà‡πÉ‡∏´‡πâ‡πÄ‡∏õ‡πá‡∏ô‡πÑ‡∏ó‡∏¢
      let birthDateThai = "-";
      if (record.birthdate) {
        try {
          console.log("Original birthdate in viewDetails:", record.birthdate);
          birthDateThai = formatThaiDateString(record.birthdate);
          console.log("Formatted birthdate in viewDetails:", birthDateThai);
        } catch (error) {
          console.error("Error formatting birthdate:", error);
          birthDateThai = record.birthdate;
        }
      }
      
      detailContent.innerHTML = `
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6" id="pdf-content">
          <div class="space-y-4">
            <div class="bg-gray-50 p-4 rounded-lg">
              <h3 class="text-lg font-semibold text-blue-600 mb-3 border-b border-gray-300 pb-2">‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏ó‡∏±‡πà‡∏ß‡πÑ‡∏õ</h3>
              <div class="grid grid-cols-1 gap-3">
                <div>
                  <p class="text-gray-600 text-sm">‡∏ß‡∏±‡∏ô‡∏ó‡∏µ‡πà‡πÅ‡∏•‡∏∞‡πÄ‡∏ß‡∏•‡∏≤:</p>
                  <p class="font-medium thai-date">${formatThaiDateTime(record.datetime)}</p>
                </div>
                <div>
                  <p class="text-gray-600 text-sm">‡πÄ‡∏•‡∏Ç‡∏ö‡∏±‡∏ï‡∏£‡∏õ‡∏£‡∏∞‡∏ä‡∏≤‡∏ä‡∏ô:</p>
                  <p class="font-medium">${record.idCard || '-'}</p>
                </div>
                <div>
                  <p class="text-gray-600 text-sm">‡∏ä‡∏∑‡πà‡∏≠-‡∏ô‡∏≤‡∏°‡∏™‡∏Å‡∏∏‡∏•:</p>
                  <p class="font-medium">${record.prefix || ''} ${record.fullName || '-'}</p>
                </div>
                <div>
                  <p class="text-gray-600 text-sm">‡∏ß‡∏±‡∏ô‡πÄ‡∏Å‡∏¥‡∏î:</p>
                  <p class="font-medium thai-date">${birthDateThai}</p>
                </div>
                <div>
                  <p class="text-gray-600 text-sm">‡∏≠‡∏≤‡∏¢‡∏∏:</p>
                  <p class="font-medium">${record.age || '-'} ‡∏õ‡∏µ</p>
                </div>
              </div>
            </div>
            
            <div class="bg-gray-50 p-4 rounded-lg">
              <h3 class="text-lg font-semibold text-blue-600 mb-3 border-b border-gray-300 pb-2">‡∏ó‡∏µ‡πà‡∏≠‡∏¢‡∏π‡πà</h3>
              <div class="grid grid-cols-1 gap-3">
                <div>
                  <p class="text-gray-600 text-sm">‡∏ó‡∏µ‡πà‡∏≠‡∏¢‡∏π‡πà‡∏ï‡∏≤‡∏°‡∏ö‡∏±‡∏ï‡∏£‡∏õ‡∏£‡∏∞‡∏ä‡∏≤‡∏ä‡∏ô:</p>
                  <p class="font-medium">${record.addressId || '-'}</p>
                </div>
                <div>
                  <p class="text-gray-600 text-sm">‡∏ó‡∏µ‡πà‡∏≠‡∏¢‡∏π‡πà‡∏õ‡∏±‡∏à‡∏à‡∏∏‡∏ö‡∏±‡∏ô:</p>
                  <p class="font-medium">${record.addressCurrent || '-'}</p>
                </div>
              </div>
            </div>
          </div>
          
          <div class="space-y-4">
            <div class="bg-gray-50 p-4 rounded-lg">
              <h3 class="text-lg font-semibold text-blue-600 mb-3 border-b border-gray-300 pb-2">‡∏Å‡∏≤‡∏£‡∏ï‡∏¥‡∏î‡∏ï‡πà‡∏≠‡πÅ‡∏•‡∏∞‡∏™‡∏ñ‡∏≤‡∏ô‡∏ó‡∏µ‡πà</h3>
              <div class="grid grid-cols-1 gap-3">
                <div>
                  <p class="text-gray-600 text-sm">‡πÄ‡∏ö‡∏≠‡∏£‡πå‡πÇ‡∏ó‡∏£:</p>
                  <p class="font-medium">${record.phone || '-'}</p>
                </div>
                <div>
                  <p class="text-gray-600 text-sm">‡∏™‡∏ñ‡∏≤‡∏ô‡∏ó‡∏µ‡πà:</p>
                  <p class="font-medium">${record.location || '-'}</p>
                </div>
                <div>
                  <p class="text-gray-600 text-sm">‡∏û‡∏¥‡∏Å‡∏±‡∏î:</p>
                  <p class="font-medium">${record.latlong || '-'}</p>
                </div>
              </div>
            </div>
            
            <div class="bg-gray-50 p-4 rounded-lg">
              <h3 class="text-lg font-semibold text-blue-600 mb-3 border-b border-gray-300 pb-2">‡∏£‡∏≤‡∏¢‡∏•‡∏∞‡πÄ‡∏≠‡∏µ‡∏¢‡∏î</h3>
              <p class="whitespace-pre-line">${record.details || '-'}</p>
            </div>
            
            ${hasImage ? `
              <div class="bg-gray-50 p-4 rounded-lg">
                <h3 class="text-lg font-semibold text-blue-600 mb-3 border-b border-gray-300 pb-2">‡∏£‡∏π‡∏õ‡∏†‡∏≤‡∏û</h3>
                <div class="flex justify-center">
                  <div class="relative">
                    <img src="${record.imageUrl}" alt="‡∏£‡∏π‡∏õ‡∏†‡∏≤‡∏û‡∏Ç‡∏≠‡∏á ${record.fullName}" 
                      class="w-48 h-48 object-cover rounded-lg border-2 border-gray-300 pdf-image">
                    <button onclick="event.stopPropagation(); showImage('${escapedImageUrl}', '${escapedName}')" 
                      class="absolute bottom-2 right-2 bg-blue-500 text-white p-2 rounded-full hover:bg-blue-600 transition duration-300 pdf-hide">
                      <i class="fas fa-search-plus"></i>
                    </button>
                  </div>
                </div>
              </div>
            ` : '<div class="bg-gray-50 p-4 rounded-lg"><h3 class="text-lg font-semibold text-blue-600 mb-3 border-b border-gray-300 pb-2">‡∏£‡∏π‡∏õ‡∏†‡∏≤‡∏û</h3><p class="text-center text-gray-500">‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏£‡∏π‡∏õ‡∏†‡∏≤‡∏û</p></div>'}
          </div>
        </div>
      `;
      
      document.getElementById('detail-modal').classList.remove('hidden');
    }
    
    // ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏õ‡∏¥‡∏î‡πÇ‡∏°‡∏î‡∏≠‡∏•‡∏£‡∏≤‡∏¢‡∏•‡∏∞‡πÄ‡∏≠‡∏µ‡∏¢‡∏î
    function closeDetailModal() {
      document.getElementById('detail-modal').classList.add('hidden');
      currentRecord = null;
    }
    
    // ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏™‡πà‡∏á‡∏≠‡∏≠‡∏Å‡πÄ‡∏õ‡πá‡∏ô PDF
    function exportToPDF() {
      if (!currentRecord) {
        Swal.fire({
          title: "‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î",
          text: "‡πÑ‡∏°‡πà‡∏û‡∏ö‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö‡∏™‡πà‡∏á‡∏≠‡∏≠‡∏Å",
          icon: "error",
          confirmButtonText: "‡∏ï‡∏Å‡∏•‡∏á",
        });
        return;
      }
      
      showLoading();
      
      // ‡∏ã‡πà‡∏≠‡∏ô‡∏õ‡∏∏‡πà‡∏°‡∏Ç‡∏¢‡∏≤‡∏¢‡∏£‡∏π‡∏õ‡∏Å‡πà‡∏≠‡∏ô‡∏ó‡∏≥‡∏Å‡∏≤‡∏£‡∏à‡∏±‡∏ö‡∏†‡∏≤‡∏û
      const pdfHideElements = document.querySelectorAll('.pdf-hide');
      pdfHideElements.forEach(el => el.style.display = 'none');
      
      // ‡∏Ç‡∏¢‡∏≤‡∏¢‡∏£‡∏π‡∏õ‡∏†‡∏≤‡∏û‡πÉ‡∏´‡πâ‡πÉ‡∏´‡∏ç‡πà‡∏Ç‡∏∂‡πâ‡∏ô
      const pdfImages = document.querySelectorAll('.pdf-image');
      pdfImages.forEach(img => {
        img.style.width = '240px';
        img.style.height = '240px';
      });
      
      try {
        // ‡∏•‡∏≠‡∏á‡πÉ‡∏ä‡πâ‡∏ß‡∏¥‡∏ò‡∏µ‡πÅ‡∏õ‡∏•‡∏á‡πÄ‡∏ô‡∏∑‡πâ‡∏≠‡∏´‡∏≤‡πÄ‡∏õ‡πá‡∏ô‡∏£‡∏π‡∏õ‡∏†‡∏≤‡∏û‡∏Å‡πà‡∏≠‡∏ô‡∏™‡∏£‡πâ‡∏≤‡∏á PDF ‡πÄ‡∏û‡∏∑‡πà‡∏≠‡πÅ‡∏Å‡πâ‡∏õ‡∏±‡∏ç‡∏´‡∏≤‡∏ü‡∏≠‡∏ô‡∏ï‡πå‡∏†‡∏≤‡∏©‡∏≤‡πÑ‡∏ó‡∏¢
        const pdfContent = document.getElementById('pdf-content');
        
        // ‡πÉ‡∏ä‡πâ html2canvas ‡πÄ‡∏û‡∏∑‡πà‡∏≠‡πÅ‡∏õ‡∏•‡∏á HTML ‡πÑ‡∏õ‡πÄ‡∏õ‡πá‡∏ô‡∏£‡∏π‡∏õ‡∏†‡∏≤‡∏û
        html2canvas(pdfContent, {
          scale: 2, // ‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏Ñ‡∏ß‡∏≤‡∏°‡∏•‡∏∞‡πÄ‡∏≠‡∏µ‡∏¢‡∏î
          useCORS: true, // ‡∏≠‡∏ô‡∏∏‡∏ç‡∏≤‡∏ï‡πÉ‡∏´‡πâ‡πÉ‡∏ä‡πâ‡∏£‡∏π‡∏õ‡∏†‡∏≤‡∏û‡∏à‡∏≤‡∏Å URL ‡∏†‡∏≤‡∏¢‡∏ô‡∏≠‡∏Å
          logging: false,
          letterRendering: true,
          allowTaint: true
        }).then(canvas => {
          try {
            // ‡πÅ‡∏õ‡∏•‡∏á canvas ‡πÄ‡∏õ‡πá‡∏ô‡∏£‡∏π‡∏õ‡∏†‡∏≤‡∏û
            const imgData = canvas.toDataURL('image/png');
            
            // ‡πÄ‡∏ï‡∏£‡∏µ‡∏¢‡∏° jsPDF
            const { jsPDF } = window.jspdf;
            const doc = new jsPDF('p', 'mm', 'a4');
            
            // ‡∏™‡∏£‡πâ‡∏≤‡∏á‡∏´‡∏±‡∏ß‡πÄ‡∏≠‡∏Å‡∏™‡∏≤‡∏£‡∏ó‡∏µ‡πà‡πÄ‡∏õ‡πá‡∏ô‡∏†‡∏≤‡∏©‡∏≤‡πÑ‡∏ó‡∏¢
            // ‡∏™‡∏£‡πâ‡∏≤‡∏á‡πÅ‡∏Ñ‡∏ô‡∏ß‡∏≤‡∏™‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö‡∏´‡∏±‡∏ß‡πÄ‡∏≠‡∏Å‡∏™‡∏≤‡∏£
            const headerCanvas = document.createElement('canvas');
            headerCanvas.width = 2100; // 10x ‡∏Å‡∏ß‡πâ‡∏≤‡∏á‡∏Å‡∏ß‡πà‡∏≤‡πÄ‡∏û‡∏∑‡πà‡∏≠‡πÉ‡∏´‡πâ‡∏Ñ‡∏°‡∏ä‡∏±‡∏î
            headerCanvas.height = 500;
            const headerCtx = headerCanvas.getContext('2d');
            
            // ‡∏ß‡∏≤‡∏î‡∏û‡∏∑‡πâ‡∏ô‡∏´‡∏•‡∏±‡∏á‡∏™‡∏µ‡∏ü‡πâ‡∏≤
            headerCtx.fillStyle = '#3B82F6'; // bg-blue-500
            headerCtx.fillRect(0, 0, 2100, 500);
            
            // ‡πÉ‡∏™‡πà‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏ß‡∏≤‡∏°‡∏™‡∏µ‡∏Ç‡∏≤‡∏ß - ‡∏ä‡∏∑‡πà‡∏≠‡πÄ‡∏≠‡∏Å‡∏™‡∏≤‡∏£
            headerCtx.fillStyle = '#FFFFFF';
            headerCtx.font = 'bold 120px Kanit, sans-serif';
            headerCtx.textAlign = 'center';
            headerCtx.fillText('‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡∏™‡∏∑‡∏ö‡∏™‡∏ß‡∏ô', 1050, 150);
            
            // ‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏ß‡∏≤‡∏°‡∏ä‡∏∑‡πà‡∏≠‡∏ö‡∏∏‡∏Ñ‡∏Ñ‡∏•
            headerCtx.font = 'bold 80px Kanit, sans-serif';
            headerCtx.fillText(`‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏Ç‡∏≠‡∏á ${currentRecord.prefix || ''} ${currentRecord.fullName || ''}`, 1050, 250);
            
            // ‡πÄ‡∏û‡∏¥‡πà‡∏°‡πÄ‡∏•‡∏Ç‡∏ö‡∏±‡∏ï‡∏£‡∏õ‡∏£‡∏∞‡∏ä‡∏≤‡∏ä‡∏ô
            headerCtx.font = '70px Kanit, sans-serif';
            headerCtx.fillText(`‡πÄ‡∏•‡∏Ç‡∏ö‡∏±‡∏ï‡∏£‡∏õ‡∏£‡∏∞‡∏ä‡∏≤‡∏ä‡∏ô: ${currentRecord.idCard || '‡πÑ‡∏°‡πà‡∏£‡∏∞‡∏ö‡∏∏'}`, 1050, 350);
            
            // ‡∏ß‡∏±‡∏ô‡∏ó‡∏µ‡πà‡∏û‡∏¥‡∏°‡∏û‡πå
            headerCtx.font = '60px Kanit, sans-serif';
            headerCtx.fillText(`‡∏ß‡∏±‡∏ô‡∏ó‡∏µ‡πà‡∏û‡∏¥‡∏°‡∏û‡πå: ${formatThaiDateTime(new Date())}`, 1050, 450);
            
            // ‡πÅ‡∏õ‡∏•‡∏á‡πÅ‡∏Ñ‡∏ô‡∏ß‡∏≤‡∏™‡πÄ‡∏õ‡πá‡∏ô‡∏£‡∏π‡∏õ‡∏†‡∏≤‡∏û
            const headerImgData = headerCanvas.toDataURL('image/png');
            
            // ‡∏Ñ‡∏≥‡∏ô‡∏ß‡∏ì‡∏Ñ‡∏ß‡∏≤‡∏°‡∏™‡∏π‡∏á‡πÅ‡∏•‡∏∞‡∏Ñ‡∏ß‡∏≤‡∏°‡∏Å‡∏ß‡πâ‡∏≤‡∏á‡πÉ‡∏´‡πâ‡∏û‡∏≠‡∏î‡∏µ‡∏Å‡∏±‡∏ö A4
            const imgWidth = 210; // A4 width in mm (297 is height)
            const pageHeight = 297;
            const imgHeight = canvas.height * imgWidth / canvas.width;
            let heightLeft = imgHeight;
            
            // ‡∏´‡∏ô‡πâ‡∏≤‡πÅ‡∏£‡∏Å - ‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏™‡πà‡∏ß‡∏ô‡∏´‡∏±‡∏ß‡πÅ‡∏•‡∏∞‡πÄ‡∏ô‡∏∑‡πâ‡∏≠‡∏´‡∏≤
            doc.addImage(headerImgData, 'PNG', 0, 0, 210, 50);
            
            // ‡∏ß‡∏≤‡∏î‡πÄ‡∏™‡πâ‡∏ô‡πÅ‡∏ö‡πà‡∏á
            doc.setDrawColor(220, 220, 220);
            doc.setLineWidth(0.5);
            doc.line(10, 52, 200, 52);
            
            // ‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏ï‡πâ‡∏ô‡πÄ‡∏ô‡∏∑‡πâ‡∏≠‡∏´‡∏≤
            let position = 55;
            
            // ‡πÄ‡∏û‡∏¥‡πà‡∏°‡πÄ‡∏ô‡∏∑‡πâ‡∏≠‡∏´‡∏≤‡∏à‡∏≤‡∏Å‡∏†‡∏≤‡∏û‡∏ó‡∏µ‡πà‡∏à‡∏±‡∏ö‡πÑ‡∏î‡πâ‡∏à‡∏≤‡∏Å canvas
            doc.addImage(imgData, 'PNG', 10, position, imgWidth - 20, imgHeight);
            
            // ‡∏ñ‡πâ‡∏≤‡∏°‡∏µ‡∏´‡∏•‡∏≤‡∏¢‡∏´‡∏ô‡πâ‡∏≤
            heightLeft -= (pageHeight - position);
            
            while (heightLeft > 0) {
              position = 0; // ‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏ï‡πâ‡∏ô‡∏ó‡∏µ‡πà‡∏î‡πâ‡∏≤‡∏ô‡∏ö‡∏ô‡∏Ç‡∏≠‡∏á‡∏´‡∏ô‡πâ‡∏≤‡πÉ‡∏´‡∏°‡πà
              doc.addPage();
              
              // ‡∏™‡∏£‡πâ‡∏≤‡∏á‡πÅ‡∏Ñ‡∏ô‡∏ß‡∏≤‡∏™‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö‡∏´‡∏±‡∏ß‡πÄ‡∏≠‡∏Å‡∏™‡∏≤‡∏£‡∏´‡∏ô‡πâ‡∏≤‡∏ï‡πà‡∏≠‡πÑ‡∏õ
              const nextHeaderCanvas = document.createElement('canvas');
              nextHeaderCanvas.width = 2100;
              nextHeaderCanvas.height = 200;
              const nextHeaderCtx = nextHeaderCanvas.getContext('2d');
              
              // ‡∏ß‡∏≤‡∏î‡∏û‡∏∑‡πâ‡∏ô‡∏´‡∏•‡∏±‡∏á‡∏™‡∏µ‡∏ü‡πâ‡∏≤
              nextHeaderCtx.fillStyle = '#3B82F6';
              nextHeaderCtx.fillRect(0, 0, 2100, 200);
              
              // ‡πÉ‡∏™‡πà‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏ß‡∏≤‡∏°‡∏™‡∏µ‡∏Ç‡∏≤‡∏ß
              nextHeaderCtx.fillStyle = '#FFFFFF';
              nextHeaderCtx.font = 'bold 80px Kanit, sans-serif';
              nextHeaderCtx.textAlign = 'center';
              nextHeaderCtx.fillText('‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡∏™‡∏∑‡∏ö‡∏™‡∏ß‡∏ô (‡∏ï‡πà‡∏≠)', 1050, 120);
              
              // ‡πÅ‡∏õ‡∏•‡∏á‡πÅ‡∏Ñ‡∏ô‡∏ß‡∏≤‡∏™‡πÄ‡∏õ‡πá‡∏ô‡∏£‡∏π‡∏õ‡∏†‡∏≤‡∏û
              const nextHeaderImgData = nextHeaderCanvas.toDataURL('image/png');
              
              // ‡πÉ‡∏™‡πà‡∏´‡∏±‡∏ß‡πÄ‡∏≠‡∏Å‡∏™‡∏≤‡∏£‡∏•‡∏á‡πÉ‡∏ô PDF
              doc.addImage(nextHeaderImgData, 'PNG', 0, 0, 210, 20);
              doc.setDrawColor(220, 220, 220);
              doc.setLineWidth(0.5);
              doc.line(10, 22, 200, 22);
              
              // ‡∏õ‡∏£‡∏±‡∏ö‡∏ï‡∏≥‡πÅ‡∏´‡∏ô‡πà‡∏á‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö‡πÄ‡∏ô‡∏∑‡πâ‡∏≠‡∏´‡∏≤
              position = 25;
              
              doc.addImage(imgData, 'PNG', 10, position - (pageHeight - 55), imgWidth - 20, imgHeight);
              heightLeft -= (pageHeight - 25);
            }
            
            // ‡πÄ‡∏û‡∏¥‡πà‡∏°‡πÄ‡∏•‡∏Ç‡∏´‡∏ô‡πâ‡∏≤ (‡πÉ‡∏ä‡πâ‡πÅ‡∏Ñ‡∏ô‡∏ß‡∏≤‡∏™‡πÄ‡∏û‡∏∑‡πà‡∏≠‡∏£‡∏≠‡∏á‡∏£‡∏±‡∏ö‡∏†‡∏≤‡∏©‡∏≤‡πÑ‡∏ó‡∏¢)
            const pageCount = doc.internal.getNumberOfPages();
            for (let i = 1; i <= pageCount; i++) {
              doc.setPage(i);
              
              const pageCanvas = document.createElement('canvas');
              pageCanvas.width = 1000;
              pageCanvas.height = 100;
              const pageCtx = pageCanvas.getContext('2d');
              pageCtx.font = '40px Kanit, sans-serif';
              pageCtx.fillStyle = '#646464';
              pageCtx.textAlign = 'center';
              pageCtx.fillText(`‡∏´‡∏ô‡πâ‡∏≤ ${i} ‡∏à‡∏≤‡∏Å ${pageCount}`, 500, 50);
              const pageImgData = pageCanvas.toDataURL('image/png');
              doc.addImage(pageImgData, 'PNG', 55, 290, 100, 10);
            }
            
            // ‡∏™‡∏£‡πâ‡∏≤‡∏á timestamp ‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö‡∏ä‡∏∑‡πà‡∏≠‡πÑ‡∏ü‡∏•‡πå
            const timestamp = new Date().toISOString().replace(/[:.]/g, '-');
            const fileName = `Detective-X_${currentRecord.fullName || 'Record'}_${timestamp}.pdf`;
            
            // ‡πÉ‡∏ä‡πâ‡∏ß‡∏¥‡∏ò‡∏µ‡∏Å‡∏≤‡∏£‡∏™‡πà‡∏á‡∏≠‡∏≠‡∏Å‡πÅ‡∏ö‡∏ö‡πÄ‡∏î‡∏µ‡∏¢‡∏ß‡∏Å‡∏±‡∏ô‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö‡∏ó‡∏∏‡∏Å‡∏≠‡∏∏‡∏õ‡∏Å‡∏£‡∏ì‡πå
            // ‡∏î‡∏≤‡∏ß‡∏ô‡πå‡πÇ‡∏´‡∏•‡∏î PDF ‡πÇ‡∏î‡∏¢‡∏ï‡∏£‡∏á‡πÄ‡∏´‡∏°‡∏∑‡∏≠‡∏ô‡∏Å‡∏±‡∏ô‡∏ó‡∏∏‡∏Å‡∏≠‡∏∏‡∏õ‡∏Å‡∏£‡∏ì‡πå
            doc.save(fileName);
            
            // ‡∏Ñ‡∏∑‡∏ô‡∏Ñ‡πà‡∏≤‡∏Å‡∏≤‡∏£‡πÅ‡∏™‡∏î‡∏á‡∏ú‡∏•‡∏õ‡∏∏‡πà‡∏°‡∏Ç‡∏¢‡∏≤‡∏¢‡πÅ‡∏•‡∏∞‡∏Ç‡∏ô‡∏≤‡∏î‡∏£‡∏π‡∏õ
            pdfHideElements.forEach(el => el.style.display = 'block');
            pdfImages.forEach(img => {
              img.style.width = '';
              img.style.height = '';
            });
            
            hideLoading();
            
            Swal.fire({
              title: "‡∏™‡πà‡∏á‡∏≠‡∏≠‡∏Å‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à",
              text: "‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡πÄ‡∏õ‡πá‡∏ô‡πÑ‡∏ü‡∏•‡πå PDF ‡πÄ‡∏£‡∏µ‡∏¢‡∏ö‡∏£‡πâ‡∏≠‡∏¢‡πÅ‡∏•‡πâ‡∏ß",
              icon: "success",
              confirmButtonText: "‡∏ï‡∏Å‡∏•‡∏á",
            });
            
          } catch (error) {
            // ‡∏Ñ‡∏∑‡∏ô‡∏Ñ‡πà‡∏≤‡∏Å‡∏≤‡∏£‡πÅ‡∏™‡∏î‡∏á‡∏ú‡∏•‡∏õ‡∏∏‡πà‡∏°‡∏Ç‡∏¢‡∏≤‡∏¢‡πÅ‡∏•‡∏∞‡∏Ç‡∏ô‡∏≤‡∏î‡∏£‡∏π‡∏õ
            pdfHideElements.forEach(el => el.style.display = 'block');
            pdfImages.forEach(img => {
              img.style.width = '';
              img.style.height = '';
            });
            
            hideLoading();
            console.error("Error generating PDF:", error);
            
            Swal.fire({
              title: "‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î",
              text: "‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡∏™‡∏£‡πâ‡∏≤‡∏á‡πÑ‡∏ü‡∏•‡πå PDF ‡πÑ‡∏î‡πâ: " + error.message,
              icon: "error",
              confirmButtonText: "‡∏ï‡∏Å‡∏•‡∏á",
            });
          }
        }).catch(error => {
          // ‡∏Ñ‡∏∑‡∏ô‡∏Ñ‡πà‡∏≤‡∏Å‡∏≤‡∏£‡πÅ‡∏™‡∏î‡∏á‡∏ú‡∏•‡∏õ‡∏∏‡πà‡∏°‡∏Ç‡∏¢‡∏≤‡∏¢‡πÅ‡∏•‡∏∞‡∏Ç‡∏ô‡∏≤‡∏î‡∏£‡∏π‡∏õ
          pdfHideElements.forEach(el => el.style.display = 'block');
          pdfImages.forEach(img => {
            img.style.width = '';
            img.style.height = '';
          });
          
          hideLoading();
          console.error("Error generating canvas:", error);
          
          Swal.fire({
            title: "‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î",
            text: "‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡∏™‡∏£‡πâ‡∏≤‡∏á‡πÑ‡∏ü‡∏•‡πå PDF ‡πÑ‡∏î‡πâ: " + error.message,
            icon: "error",
            confirmButtonText: "‡∏ï‡∏Å‡∏•‡∏á",
          });
        });
      } catch (e) {
        // ‡∏Ñ‡∏∑‡∏ô‡∏Ñ‡πà‡∏≤‡∏Å‡∏≤‡∏£‡πÅ‡∏™‡∏î‡∏á‡∏ú‡∏•‡∏õ‡∏∏‡πà‡∏°‡∏Ç‡∏¢‡∏≤‡∏¢‡πÅ‡∏•‡∏∞‡∏Ç‡∏ô‡∏≤‡∏î‡∏£‡∏π‡∏õ
        pdfHideElements.forEach(el => el.style.display = 'block');
        pdfImages.forEach(img => {
          img.style.width = '';
          img.style.height = '';
        });
        
        hideLoading();
        console.error("Error:", e);
        
        Swal.fire({
          title: "‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î",
          text: "‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡∏™‡∏£‡πâ‡∏≤‡∏á‡πÑ‡∏ü‡∏•‡πå PDF ‡πÑ‡∏î‡πâ: " + e.message,
          icon: "error",
          confirmButtonText: "‡∏ï‡∏Å‡∏•‡∏á",
        });
      }
    }
    
    // ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡πÅ‡∏Å‡πâ‡πÑ‡∏Ç‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•
    function editRecord(index) {
      const record = window.allRecords[index];
      isEditMode = true;
      
      // ‡πÄ‡∏õ‡∏•‡∏µ‡πà‡∏¢‡∏ô‡∏´‡∏ô‡πâ‡∏≤‡πÑ‡∏õ‡∏ó‡∏µ‡πà‡∏ü‡∏≠‡∏£‡πå‡∏°
      databaseContainer.classList.add('hidden');
      formContainer.classList.remove('hidden');
      
      // ‡πÄ‡∏Å‡πá‡∏ö‡∏Ñ‡πà‡∏≤ ID ‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å
      recordIdInput.value = record.id;
      
      // ‡∏Å‡∏≥‡∏´‡∏ô‡∏î‡∏Ñ‡πà‡∏≤‡πÉ‡∏´‡πâ‡∏Å‡∏±‡∏ö‡∏ü‡∏≠‡∏£‡πå‡∏°
      document.getElementById('datetime').value = record.datetime;
      idCardInput.value = record.idCard;
      document.getElementById('prefix').value = record.prefix;
      document.getElementById('fullname').value = record.fullName;
      
      // ‡πÅ‡∏õ‡∏•‡∏á‡∏ß‡∏±‡∏ô‡πÄ‡∏î‡∏∑‡∏≠‡∏ô‡∏õ‡∏µ‡πÄ‡∏Å‡∏¥‡∏î‡∏Å‡∏•‡∏±‡∏ö‡πÄ‡∏õ‡πá‡∏ô‡∏£‡∏π‡∏õ‡πÅ‡∏ö‡∏ö‡∏ó‡∏µ‡πà input type="date" ‡∏ï‡πâ‡∏≠‡∏á‡∏Å‡∏≤‡∏£
      // ‡∏ñ‡πâ‡∏≤‡∏≠‡∏¢‡∏π‡πà‡πÉ‡∏ô‡∏£‡∏π‡∏õ‡πÅ‡∏ö‡∏ö ‡∏ß‡∏±‡∏ô/‡πÄ‡∏î‡∏∑‡∏≠‡∏ô/‡∏õ‡∏µ ‡∏û.‡∏®.
      if (record.birthdate) {
        try {
          const parts = record.birthdate.split('/');
          if (parts.length === 3) {
            const day = parseInt(parts[0]);
            const month = parseInt(parts[1]);
            const yearBE = parseInt(parts[2]);
            const yearAD = yearBE - 543;
            
            const dateString = `${yearAD}-${month.toString().padStart(2, '0')}-${day.toString().padStart(2, '0')}`;
            birthdateInput.value = dateString;
          }
        } catch (error) {
          console.error("Error parsing birthdate:", error);
        }
      }
      calculateAge();
      
      document.getElementById('address-id').value = record.addressId;
      document.getElementById('address-current').value = record.addressCurrent;
      phoneInput.value = record.phone;
      document.getElementById('location').value = record.location;
      document.getElementById('latlong').value = record.latlong;
      document.getElementById('details').value = record.details;
      
      // ‡πÅ‡∏™‡∏î‡∏á‡∏£‡∏π‡∏õ‡∏†‡∏≤‡∏û‡∏ó‡∏µ‡πà‡∏°‡∏µ‡∏≠‡∏¢‡∏π‡πà
      if (record.imageUrl && record.imageUrl.trim() !== '') {
        existingImageUrlInput.value = record.imageUrl;
        currentImage.src = record.imageUrl;
        currentImageContainer.classList.remove('hidden');
      } else {
        existingImageUrlInput.value = '';
        currentImageContainer.classList.add('hidden');
      }
      
      // ‡∏ã‡πà‡∏≠‡∏ô‡∏õ‡∏∏‡πà‡∏°‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å ‡πÅ‡∏™‡∏î‡∏á‡∏õ‡∏∏‡πà‡∏°‡∏≠‡∏±‡∏û‡πÄ‡∏î‡∏ï‡πÅ‡∏•‡∏∞‡∏¢‡∏Å‡πÄ‡∏•‡∏¥‡∏Å
      saveButton.classList.add('hidden');
      updateButton.classList.remove('hidden');
      cancelButton.classList.remove('hidden');
    }
    
    // ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏¢‡∏Å‡πÄ‡∏•‡∏¥‡∏Å‡∏Å‡∏≤‡∏£‡πÅ‡∏Å‡πâ‡πÑ‡∏Ç
    function cancelEdit() {
      resetForm();
      
      databaseContainer.classList.remove('hidden');
      formContainer.classList.add('hidden');
    }
    
    // ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏£‡∏µ‡πÄ‡∏ã‡πá‡∏ï‡∏ü‡∏≠‡∏£‡πå‡∏°
    function resetForm() {
      isEditMode = false;
      recordIdInput.value = '';
      existingImageUrlInput.value = '';
      document.getElementById('field-form').reset();
      
      // ‡∏ã‡πà‡∏≠‡∏ô‡∏£‡∏π‡∏õ‡∏†‡∏≤‡∏û‡∏õ‡∏±‡∏à‡∏à‡∏∏‡∏ö‡∏±‡∏ô‡πÅ‡∏•‡∏∞‡∏û‡∏£‡∏µ‡∏ß‡∏¥‡∏ß
      currentImageContainer.classList.add('hidden');
      document.getElementById('image-preview-container').classList.add('hidden');
      
      // ‡πÅ‡∏™‡∏î‡∏á‡∏õ‡∏∏‡πà‡∏°‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å ‡∏ã‡πà‡∏≠‡∏ô‡∏õ‡∏∏‡πà‡∏°‡∏≠‡∏±‡∏û‡πÄ‡∏î‡∏ï‡πÅ‡∏•‡∏∞‡∏¢‡∏Å‡πÄ‡∏•‡∏¥‡∏Å
      saveButton.classList.remove('hidden');
      updateButton.classList.add('hidden');
      cancelButton.classList.add('hidden');
      
      // ‡∏£‡∏µ‡πÄ‡∏ã‡πá‡∏ï‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏ß‡∏≤‡∏°‡∏™‡∏ñ‡∏≤‡∏ô‡∏∞
      idCardStatus.textContent = '';
      idCardStatus.classList.add('hidden');
      phoneStatus.textContent = '';
      ageDisplay.textContent = '';
    }
    
    // ‡∏ü‡∏±‡∏á‡∏ä‡∏±‡πà‡∏ô‡πÄ‡∏Å‡πá‡∏ö Lat,Long ‡∏û‡∏¥‡∏Å‡∏±‡∏î
    function getLatLong() {
      if (navigator.geolocation) {
        navigator.geolocation.getCurrentPosition(position => {
          document.getElementById('latlong').value = `${position.coords.latitude}, ${position.coords.longitude}`;
        }, error => {
          Swal.fire({
            title: "‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡∏î‡∏∂‡∏á‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏û‡∏¥‡∏Å‡∏±‡∏î‡πÑ‡∏î‡πâ",
            text: error.message,
            icon: "error",
            confirmButtonText: "‡∏ï‡∏Å‡∏•‡∏á",
          });
        });
      } else {
        Swal.fire({
          title: "‡πÄ‡∏ö‡∏£‡∏≤‡∏ß‡πå‡πÄ‡∏ã‡∏≠‡∏£‡πå‡πÑ‡∏°‡πà‡∏£‡∏≠‡∏á‡∏£‡∏±‡∏ö",
          text: "‡πÄ‡∏ö‡∏£‡∏≤‡∏ß‡πå‡πÄ‡∏ã‡∏≠‡∏£‡πå‡∏Ç‡∏≠‡∏á‡∏Ñ‡∏∏‡∏ì‡πÑ‡∏°‡πà‡∏£‡∏≠‡∏á‡∏£‡∏±‡∏ö‡∏Å‡∏≤‡∏£‡πÉ‡∏ä‡πâ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏û‡∏¥‡∏Å‡∏±‡∏î",
          icon: "error",
          confirmButtonText: "‡∏ï‡∏Å‡∏•‡∏á",
        });
      }
    }

    // ‡∏ü‡∏±‡∏á‡∏ä‡∏±‡πà‡∏ô‡∏Ñ‡∏≥‡∏ô‡∏ß‡∏ì‡∏≠‡∏≤‡∏¢‡∏∏
    function calculateAge() {
      const birthdate = new Date(birthdateInput.value);
      const today = new Date();
      let age = today.getFullYear() - birthdate.getFullYear();
      const monthDifference = today.getMonth() - birthdate.getMonth();
      if (monthDifference < 0 || (monthDifference === 0 && today.getDate() < birthdate.getDate())) {
        age--;
      }
      ageDisplay.textContent = `‡∏≠‡∏≤‡∏¢‡∏∏: ${age} ‡∏õ‡∏µ`;
      return age;
    }

    // ‡∏ü‡∏±‡∏á‡∏ä‡∏±‡πà‡∏ô‡∏û‡∏£‡∏µ‡∏ß‡∏¥‡∏ß‡∏†‡∏≤‡∏û‡∏ó‡∏µ‡πà‡∏≠‡∏±‡∏û‡πÇ‡∏´‡∏•‡∏î
    function previewImage(event) {
      const input = event.target;
      const previewContainer = document.getElementById('image-preview-container');
      const previewImage = document.getElementById('image-preview');

      if (input.files && input.files[0]) {
        const reader = new FileReader();
        reader.onload = function (e) {
          previewImage.src = e.target.result;
          previewContainer.classList.remove('hidden');
        };
        reader.readAsDataURL(input.files[0]);
      } else {
        previewImage.src = '#';
        previewContainer.classList.add('hidden');
      }
    }

    // ‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏ß‡∏≤‡∏°‡∏ï‡∏±‡∏ß‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡∏ü‡∏≠‡∏£‡πå‡∏°
    function validateForm() {
      const errors = [];

      if (!validateIDCard()) {
        errors.push('‚ùå‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏Å‡∏£‡∏≠‡∏Å‡πÄ‡∏•‡∏Ç‡∏ö‡∏±‡∏ï‡∏£‡∏õ‡∏£‡∏∞‡∏ä‡∏≤‡∏ä‡∏ô‡πÉ‡∏´‡πâ‡∏Ñ‡∏£‡∏ö13‡∏´‡∏•‡∏±‡∏Å');
      }

      if (!validatePhone()) {
        errors.push('‚ùå‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏Å‡∏£‡∏≠‡∏Å‡πÄ‡∏ö‡∏≠‡∏£‡πå‡πÇ‡∏ó‡∏£‡πÉ‡∏´‡πâ‡∏ñ‡∏π‡∏Å‡∏ï‡πâ‡∏≠‡∏á(‡∏ï‡πâ‡∏≠‡∏á‡∏Ç‡∏∂‡πâ‡∏ô‡∏ï‡πâ‡∏ô‡∏î‡πâ‡∏ß‡∏¢ 0 ‡πÅ‡∏•‡∏∞‡∏ï‡∏≤‡∏°‡∏î‡πâ‡∏ß‡∏¢ 9 ‡∏´‡∏•‡∏±‡∏Å)');
      }

      const requiredFields = [
        { id: 'datetime', message: '‚ùå‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏Å‡∏£‡∏≠‡∏Å‡∏ß‡∏±‡∏ô‡∏ó‡∏µ‡πà‡πÅ‡∏•‡∏∞‡πÄ‡∏ß‡∏•‡∏≤' },
        { id: 'prefix', message: '‚ùå‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏Ñ‡∏≥‡∏ô‡∏≥‡∏´‡∏ô‡πâ‡∏≤' },
        { id: 'fullname', message: '‚ùå‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏Å‡∏£‡∏≠‡∏Å‡∏ä‡∏∑‡πà‡∏≠-‡∏ô‡∏≤‡∏°‡∏™‡∏Å‡∏∏‡∏•' },
        { id: 'birthdate', message: '‚ùå‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏Å‡∏£‡∏≠‡∏Å‡∏ß‡∏±‡∏ô/‡πÄ‡∏î‡∏∑‡∏≠‡∏ô/‡∏õ‡∏µ‡πÄ‡∏Å‡∏¥‡∏î' },
        { id: 'address-id', message: '‚ùå‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏Å‡∏£‡∏≠‡∏Å‡∏ó‡∏µ‡πà‡∏≠‡∏¢‡∏π‡πà‡∏ï‡∏≤‡∏°‡∏ö‡∏±‡∏ï‡∏£‡∏õ‡∏£‡∏∞‡∏ä‡∏≤‡∏ä‡∏ô' },
        { id: 'address-current', message: '‚ùå‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏Å‡∏£‡∏≠‡∏Å‡∏ó‡∏µ‡πà‡∏≠‡∏¢‡∏π‡πà‡∏õ‡∏±‡∏à‡∏à‡∏∏‡∏ö‡∏±‡∏ô' },
        { id: 'location', message: '‚ùå‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏Å‡∏£‡∏≠‡∏Å‡∏™‡∏ñ‡∏≤‡∏ô‡∏ó‡∏µ‡πà' },
        { id: 'latlong', message: '‚ùå‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏Å‡∏£‡∏≠‡∏Å‡∏û‡∏¥‡∏Å‡∏±‡∏î' },
        { id: 'details', message: '‚ùå‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏Å‡∏£‡∏≠‡∏Å‡∏£‡∏≤‡∏¢‡∏•‡∏∞‡πÄ‡∏≠‡∏µ‡∏¢‡∏î' }
      ];

      requiredFields.forEach(field => {
        const input = document.getElementById(field.id);
        if (!input.value.trim()) {
          errors.push(field.message);
        }
      });

      return errors;
    }

    // ‡πÇ‡∏ä‡∏ß‡πå‡πÄ‡∏°‡∏∑‡πà‡∏≠‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏ß‡πà‡∏≤‡∏¢‡∏±‡∏á‡∏Å‡∏£‡∏≠‡∏Å‡πÑ‡∏°‡πà‡∏Ñ‡∏£‡∏ö
    function showValidationErrors(errors) {
      const errorList = errors.map(error => `<li>${error}</li>`).join('');
      Swal.fire({
        title: "‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡πÑ‡∏°‡πà‡∏Ñ‡∏£‡∏ö‡∏ñ‡πâ‡∏ß‡∏ô",
        html: `‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏ï‡πà‡∏≠‡πÑ‡∏õ‡∏ô‡∏µ‡πâ:<ul class="text-left mt-4">${errorList}</ul>`,
        icon: "error",
        confirmButtonText: "‡∏ï‡∏Å‡∏•‡∏á",
      });
    }

    // ‡πÇ‡∏ä‡∏ß‡πå‡πÇ‡∏´‡∏•‡∏î
    function showLoading() {
      loading.classList.remove('hidden');
    }

    // ‡∏ã‡πà‡∏≠‡∏ô‡πÇ‡∏´‡∏•‡∏î
    function hideLoading() {
      loading.classList.add('hidden');
    }

    // ‡∏¢‡∏∑‡∏ô‡∏¢‡∏±‡∏ô‡∏™‡πà‡∏á‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏• (‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡πÉ‡∏´‡∏°‡πà)
    function submitData() {
      const errors = validateForm();

      if (errors.length > 0) {
        showValidationErrors(errors);
        return;
      }

      showLoading();

      const age = calculateAge();
      const birthdate = new Date(birthdateInput.value);
      const birthYear = birthdate.getFullYear() + 543;
      const birthMonth = birthdate.getMonth() + 1;
      const birthDay = birthdate.getDate();
      const birthdateBE = `${birthDay}/${birthMonth}/${birthYear}`;

      const formData = {
        datetime: document.getElementById('datetime').value,
        idCard: idCardInput.value,
        prefix: document.getElementById('prefix').value,
        fullName: document.getElementById('fullname').value,
        birthdate: birthdateBE,
        age: age,
        addressId: document.getElementById('address-id').value,
        addressCurrent: document.getElementById('address-current').value,
        phone: phoneInput.value,
        location: document.getElementById('location').value,
        latlong: document.getElementById('latlong').value,
        details: document.getElementById('details').value,
        image: imageUpload.files[0] ? imageUpload.files[0] : null
      };

      if (formData.image) {
        const reader = new FileReader();
        reader.onloadend = function() {
          const base64Image = reader.result.split(',')[1];
          formData.image = {
            base64: base64Image,
            type: formData.image.type,
            name: formData.image.name
          };
          sendData(formData);
        };
        reader.readAsDataURL(formData.image);
      } else {
        sendData(formData);
      }
    }
    
    // ‡∏¢‡∏∑‡∏ô‡∏¢‡∏±‡∏ô‡∏≠‡∏±‡∏û‡πÄ‡∏î‡∏ó‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•
    function updateData() {
      const errors = validateForm();

      if (errors.length > 0) {
        showValidationErrors(errors);
        return;
      }

      showLoading();

      const age = calculateAge();
      const birthdate = new Date(birthdateInput.value);
      const birthYear = birthdate.getFullYear() + 543;
      const birthMonth = birthdate.getMonth() + 1;
      const birthDay = birthdate.getDate();
      const birthdateBE = `${birthDay}/${birthMonth}/${birthYear}`;

      const formData = {
        id: recordIdInput.value,
        datetime: document.getElementById('datetime').value,
        idCard: idCardInput.value,
        prefix: document.getElementById('prefix').value,
        fullName: document.getElementById('fullname').value,
        birthdate: birthdateBE,
        age: age,
        addressId: document.getElementById('address-id').value,
        addressCurrent: document.getElementById('address-current').value,
        phone: phoneInput.value,
        location: document.getElementById('location').value,
        latlong: document.getElementById('latlong').value,
        details: document.getElementById('details').value,
        existingImageUrl: existingImageUrlInput.value,
        image: imageUpload.files[0] ? imageUpload.files[0] : null
      };

      if (formData.image) {
        const reader = new FileReader();
        reader.onloadend = function() {
          const base64Image = reader.result.split(',')[1];
          formData.image = {
            base64: base64Image,
            type: formData.image.type,
            name: formData.image.name
          };
          updateRecord(formData);
        };
        reader.readAsDataURL(formData.image);
      } else {
        updateRecord(formData);
      }
    }

    // ‡∏™‡πà‡∏á‡∏≠‡∏≠‡∏Å‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏• (‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡πÉ‡∏´‡∏°‡πà)
    function sendData(formData) {
      google.script.run
        .withSuccessHandler(function(response) {
          hideLoading();

          if (response.status === 'success') {
            Swal.fire({
              title: "‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à!",
              icon: "success",
              confirmButtonText: "‡∏ï‡∏Å‡∏•‡∏á",
            }).then(() => {
              resetForm();
              backToMainMenu();
            });
          } else {
            Swal.fire({
              title: "‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡πÑ‡∏°‡πà‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à",
              text: response.message,
              icon: "error",
              confirmButtonText: "‡∏ï‡∏Å‡∏•‡∏á",
            });
          }
        })
        .withFailureHandler(function(error) {
          hideLoading();
          Swal.fire({
            title: "‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î",
            text: "‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡πÑ‡∏î‡πâ: " + error.message,
            icon: "error",
            confirmButtonText: "‡∏ï‡∏Å‡∏•‡∏á",
          });
        })
        .submitFormData(formData);
    }
    
    // ‡∏™‡πà‡∏á‡∏≠‡∏≠‡∏Å‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö‡∏≠‡∏±‡∏û‡πÄ‡∏î‡∏ó
    function updateRecord(formData) {
      google.script.run
        .withSuccessHandler(function(response) {
          hideLoading();

          if (response.status === 'success') {
            Swal.fire({
              title: "‡πÅ‡∏Å‡πâ‡πÑ‡∏Ç‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à!",
              icon: "success",
              confirmButtonText: "‡∏ï‡∏Å‡∏•‡∏á",
            }).then(() => {
              resetForm();
              databaseContainer.classList.remove('hidden');
              formContainer.classList.add('hidden');
              fetchRecords();
            });
          } else {
            Swal.fire({
              title: "‡πÅ‡∏Å‡πâ‡πÑ‡∏Ç‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡πÑ‡∏°‡πà‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à",
              text: response.message,
              icon: "error",
              confirmButtonText: "‡∏ï‡∏Å‡∏•‡∏á",
            });
          }
        })
        .withFailureHandler(function(error) {
          hideLoading();
          Swal.fire({
            title: "‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î",
            text: "‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡πÅ‡∏Å‡πâ‡πÑ‡∏Ç‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡πÑ‡∏î‡πâ: " + error.message,
            icon: "error",
            confirmButtonText: "‡∏ï‡∏Å‡∏•‡∏á",
          });
        })
        .updateFormData(formData);
    }
    
    // ‡πÄ‡∏°‡∏∑‡πà‡∏≠‡∏Å‡∏î‡∏õ‡∏∏‡πà‡∏° Enter ‡πÉ‡∏ô‡∏ä‡πà‡∏≠‡∏á password
    passwordInput.addEventListener('keyup', function(event) {
      if (event.key === 'Enter') {
        checkPassword();
      }
    });
    
    // ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏¢‡∏∑‡∏ô‡∏¢‡∏±‡∏ô‡∏Å‡∏≤‡∏£‡∏•‡∏ö‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•
    function confirmDeleteRecord(index) {
      const record = window.allRecords[index];
      
      Swal.fire({
        title: "‡∏¢‡∏∑‡∏ô‡∏¢‡∏±‡∏ô‡∏Å‡∏≤‡∏£‡∏•‡∏ö‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•",
        html: `‡∏Ñ‡∏∏‡∏ì‡∏ï‡πâ‡∏≠‡∏á‡∏Å‡∏≤‡∏£‡∏•‡∏ö‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏Ç‡∏≠‡∏á <strong>${record.prefix} ${record.fullName}</strong> ‡πÉ‡∏ä‡πà‡∏´‡∏£‡∏∑‡∏≠‡πÑ‡∏°‡πà?<br>‡∏Å‡∏≤‡∏£‡∏î‡∏≥‡πÄ‡∏ô‡∏¥‡∏ô‡∏Å‡∏≤‡∏£‡∏ô‡∏µ‡πâ‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡πÄ‡∏£‡∏µ‡∏¢‡∏Å‡∏Ñ‡∏∑‡∏ô‡πÑ‡∏î‡πâ`,
        icon: "warning",
        showCancelButton: true,
        confirmButtonText: "‡∏•‡∏ö‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•",
        cancelButtonText: "‡∏¢‡∏Å‡πÄ‡∏•‡∏¥‡∏Å",
        confirmButtonColor: "#d33",
        cancelButtonColor: "#3085d6",
      }).then((result) => {
        if (result.isConfirmed) {
          deleteRecord(record.id);
        }
      });
    }
    
    // ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏•‡∏ö‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•
    function deleteRecord(recordId) {
      showLoading();
      
      google.script.run
        .withSuccessHandler(function(response) {
          hideLoading();
          
          if (response.status === 'success') {
            Swal.fire({
              title: "‡∏•‡∏ö‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à",
              text: "‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏ñ‡∏π‡∏Å‡∏•‡∏ö‡∏≠‡∏≠‡∏Å‡∏à‡∏≤‡∏Å‡∏£‡∏∞‡∏ö‡∏ö‡πÄ‡∏£‡∏µ‡∏¢‡∏ö‡∏£‡πâ‡∏≠‡∏¢‡πÅ‡∏•‡πâ‡∏ß",
              icon: "success",
              confirmButtonText: "‡∏ï‡∏Å‡∏•‡∏á",
            }).then(() => {
              fetchRecords(); // ‡πÇ‡∏´‡∏•‡∏î‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡πÉ‡∏´‡∏°‡πà
            });
          } else {
            Swal.fire({
              title: "‡∏•‡∏ö‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡πÑ‡∏°‡πà‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à",
              text: response.message || "‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î‡πÉ‡∏ô‡∏Å‡∏≤‡∏£‡∏•‡∏ö‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•",
              icon: "error",
              confirmButtonText: "‡∏ï‡∏Å‡∏•‡∏á",
            });
          }
        })
        .withFailureHandler(function(error) {
          hideLoading();
          
          Swal.fire({
            title: "‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î",
            text: "‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡∏•‡∏ö‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡πÑ‡∏î‡πâ: " + error.message,
            icon: "error",
            confirmButtonText: "‡∏ï‡∏Å‡∏•‡∏á",
          });
        })
        .deleteRecord(recordId);
    }
    
    // ‡πÄ‡∏°‡∏∑‡πà‡∏≠‡∏Ñ‡∏•‡∏¥‡∏Å‡∏ó‡∏µ‡πà‡∏û‡∏∑‡πâ‡∏ô‡∏´‡∏•‡∏±‡∏á‡∏Ç‡∏≠‡∏á‡πÇ‡∏°‡∏î‡∏≠‡∏•
    window.onclick = function(event) {
      if (event.target === document.getElementById('image-modal')) {
        closeImageModal();
      }
      if (event.target === document.getElementById('detail-modal')) {
        closeDetailModal();
      }
    };
  </script>
</body>
