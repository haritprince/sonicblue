// ‡∏´‡∏ô‡πâ‡∏≤‡∏´‡∏•‡∏±‡∏Å‡∏Ç‡∏≠‡∏á‡πÅ‡∏≠‡∏õ
function doGet() {
  return HtmlService.createTemplateFromFile('index').evaluate()
    .setTitle("Detective-X")
    .addMetaTag('viewport', 'width=device-width, initial-scale=1')
    .setXFrameOptionsMode(HtmlService.XFrameOptionsMode.ALLOWALL);
}

// ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡∏£‡∏´‡∏±‡∏™‡∏ú‡πà‡∏≤‡∏ô
function checkPassword(inputPassword) {
  const correctPassword = 'khunthalay'; // ‡∏£‡∏´‡∏±‡∏™‡∏ú‡πà‡∏≤‡∏ô‡∏ó‡∏µ‡πà‡∏ñ‡∏π‡∏Å‡∏ï‡πâ‡∏≠‡∏á (‡πÄ‡∏Å‡πá‡∏ö‡πÑ‡∏ß‡πâ‡πÉ‡∏ô Server)

  if (inputPassword === correctPassword) {
    return { status: 'success', message: '‡∏£‡∏´‡∏±‡∏™‡∏ú‡πà‡∏≤‡∏ô‡∏ñ‡∏π‡∏Å‡∏ï‡πâ‡∏≠‡∏á' };
  } else {
    return { status: 'error', message: '‡∏£‡∏´‡∏±‡∏™‡∏ú‡πà‡∏≤‡∏ô‡πÑ‡∏°‡πà‡∏ñ‡∏π‡∏Å‡∏ï‡πâ‡∏≠‡∏á' };
  }
}

// ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏î‡∏∂‡∏á‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î‡∏à‡∏≤‡∏Å Sheet
function getRecords() {
  try {
    var sheetId = "1norHopSjbEQLhow8cQ441axZaZy5WBi9fKmoK-7n8vc";
    var sheetName = "Person";
    var sheet = SpreadsheetApp.openById(sheetId).getSheetByName(sheetName);
    
    if (!sheet) {
      Logger.log('‡πÑ‡∏°‡πà‡∏û‡∏ö‡∏ä‡∏µ‡∏ó "Person"');
      return [];
    }
    
    const dataRange = sheet.getDataRange();
    const values = dataRange.getValues();
    
    Logger.log('‡∏à‡∏≥‡∏ô‡∏ß‡∏ô‡πÅ‡∏ñ‡∏ß‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î: ' + values.length);
    
    if (values.length <= 1) {
      Logger.log('‡∏°‡∏µ‡πÄ‡∏û‡∏µ‡∏¢‡∏á‡πÅ‡∏ñ‡∏ß‡∏´‡∏±‡∏ß‡∏ï‡∏≤‡∏£‡∏≤‡∏á ‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•');
      return [];
    }
    
    const records = [];
    
    // ‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏à‡∏≤‡∏Å‡πÅ‡∏ñ‡∏ß‡∏ó‡∏µ‡πà 2 (‡∏Ç‡πâ‡∏≤‡∏°‡∏™‡πà‡∏ß‡∏ô‡∏´‡∏±‡∏ß)
    for (let i = 1; i < values.length; i++) {
      const row = values[i];
      
      // ‡∏Ç‡πâ‡∏≤‡∏°‡πÅ‡∏ñ‡∏ß‡∏ó‡∏µ‡πà‡∏ß‡πà‡∏≤‡∏á‡πÄ‡∏õ‡∏•‡πà‡∏≤
      if (!row[0] && !row[1] && !row[2]) {
        Logger.log('‡∏û‡∏ö‡πÅ‡∏ñ‡∏ß‡∏ß‡πà‡∏≤‡∏á ‡∏Ç‡πâ‡∏≤‡∏°: ‡πÅ‡∏ñ‡∏ß‡∏ó‡∏µ‡πà ' + (i+1));
        continue;
      }
      
      // ‡∏™‡∏£‡πâ‡∏≤‡∏á‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡πÅ‡∏ö‡∏ö‡∏õ‡∏•‡∏≠‡∏î‡∏†‡∏±‡∏¢
      const record = {};
      
      record.id = i + 1;
      record.systemDate = row[0] ? Utilities.formatDate(new Date(row[0]), "GMT+7", "yyyy-MM-dd HH:mm:ss") : "";
      record.datetime = row[1] ? Utilities.formatDate(new Date(row[1]), "GMT+7", "yyyy-MM-dd HH:mm:ss") : "";
      record.idCard = row[2] ? String(row[2]) : "";
      record.prefix = row[3] ? String(row[3]) : "";
      record.fullName = row[4] ? String(row[4]) : "";
      record.birthdate = row[5] ? String(row[5]) : "";
      record.age = row[6] ? Number(row[6]) : 0;
      record.addressId = row[7] ? String(row[7]) : "";
      record.addressCurrent = row[8] ? String(row[8]) : "";
      record.phone = row[9] ? String(row[9]) : "";
      record.location = row[10] ? String(row[10]) : "";
      record.latlong = row[11] ? String(row[11]) : "";
      record.details = row[12] ? String(row[12]) : "";
      record.imageUrl = "";
      
      // ‡∏û‡∏¢‡∏≤‡∏¢‡∏≤‡∏°‡∏î‡∏∂‡∏á‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏£‡∏π‡∏õ‡∏†‡∏≤‡∏û
      try {
        const imageCell = sheet.getRange(i + 1, 14).getFormula();
        if (imageCell && imageCell.includes('IMAGE')) {
          const urlMatch = imageCell.match(/IMAGE\("([^"]+)"/);
          if (urlMatch && urlMatch[1]) {
            record.imageUrl = String(urlMatch[1]);
          }
        }
      } catch (e) {
        Logger.log('‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡∏≠‡πà‡∏≤‡∏ô‡∏™‡∏π‡∏ï‡∏£‡∏£‡∏π‡∏õ‡∏†‡∏≤‡∏û‡πÑ‡∏î‡πâ: ' + e.message);
      }
      
      records.push(record);
    }
    
    // ‡πÄ‡∏£‡∏µ‡∏¢‡∏á‡∏•‡∏≥‡∏î‡∏±‡∏ö‡∏ï‡∏≤‡∏°‡∏ß‡∏±‡∏ô‡∏ó‡∏µ‡πà‡∏•‡πà‡∏≤‡∏™‡∏∏‡∏î
    records.sort(function(a, b) {
      // ‡πÉ‡∏ä‡πâ systemDate ‡πÄ‡∏û‡∏£‡∏≤‡∏∞‡∏°‡∏±‡πà‡∏ô‡πÉ‡∏à‡∏ß‡πà‡∏≤‡∏°‡∏µ‡∏Ñ‡πà‡∏≤
      const dateA = a.systemDate ? new Date(a.systemDate) : new Date(0);
      const dateB = b.systemDate ? new Date(b.systemDate) : new Date(0);
      return dateB - dateA;
    });
    
    Logger.log('‡∏î‡∏∂‡∏á‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à: ' + records.length + ' ‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£');
    return records;
    
  } catch (error) {
    Logger.log('‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î‡πÉ‡∏ô‡∏Å‡∏≤‡∏£‡∏î‡∏∂‡∏á‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•: ' + error.message);
    Logger.log('‡∏™‡πÅ‡∏ï‡πá‡∏Ñ‡πÄ‡∏ó‡∏£‡∏ã: ' + error.stack);
    
    // ‡∏™‡πà‡∏á‡∏≠‡∏≤‡∏£‡πå‡πÄ‡∏£‡∏¢‡πå‡∏ß‡πà‡∏≤‡∏á‡∏Å‡∏•‡∏±‡∏ö‡πÄ‡∏û‡∏∑‡πà‡∏≠‡πÉ‡∏´‡πâ UI ‡πÅ‡∏™‡∏î‡∏á‡∏ú‡∏•‡πÑ‡∏î‡πâ
    return [];
  }
}

// ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡πÉ‡∏´‡∏°‡πà
function submitFormData(data) {
  try {
    var sheetId = "1norHopSjbEQLhow8cQ441axZaZy5WBi9fKmoK-7n8vc";
    var sheetName = "Person";
    var sheet = SpreadsheetApp.openById(sheetId).getSheetByName(sheetName);

    const lastRow = sheet.getLastRow() + 1;
    
    // ‡∏ï‡∏±‡πâ‡∏á‡∏Ñ‡πà‡∏≤‡∏Å‡∏≤‡∏£‡πÅ‡∏™‡∏î‡∏á‡∏ú‡∏•‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö‡∏ä‡πà‡∏≠‡∏á‡πÄ‡∏ö‡∏≠‡∏£‡πå‡πÇ‡∏ó‡∏£ (‡πÄ‡∏û‡∏∑‡πà‡∏≠‡πÉ‡∏´‡πâ‡πÑ‡∏°‡πà‡πÅ‡∏õ‡∏•‡∏á‡πÄ‡∏õ‡πá‡∏ô‡∏ï‡∏±‡∏ß‡πÄ‡∏•‡∏Ç)
    const phoneRange = sheet.getRange(lastRow, 10);
    phoneRange.setNumberFormat('@');

    // ‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏•‡∏á‡∏ï‡∏≤‡∏£‡∏≤‡∏á
    sheet.appendRow([
      new Date(), // ‡∏ß‡∏±‡∏ô‡∏ó‡∏µ‡πà‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡πÉ‡∏ô‡∏£‡∏∞‡∏ö‡∏ö
      new Date(data.datetime), // ‡∏ß‡∏±‡∏ô‡∏ó‡∏µ‡πà‡∏ó‡∏µ‡πà‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ‡∏Å‡∏£‡∏≠‡∏Å
      data.idCard,
      data.prefix,
      data.fullName,
      data.birthdate,
      data.age,
      data.addressId,
      data.addressCurrent,
      data.phone, // ‡πÑ‡∏°‡πà‡∏ï‡πâ‡∏≠‡∏á‡πÉ‡∏ä‡πâ "'" ‡∏ô‡∏≥‡∏´‡∏ô‡πâ‡∏≤‡πÅ‡∏•‡πâ‡∏ß ‡πÄ‡∏û‡∏£‡∏≤‡∏∞‡πÑ‡∏î‡πâ‡∏ï‡∏±‡πâ‡∏á‡∏Ñ‡πà‡∏≤ NumberFormat ‡πÄ‡∏õ‡πá‡∏ô '@' ‡πÅ‡∏•‡πâ‡∏ß
      data.location,
      data.latlong,
      data.details
    ]);

    // ‡∏≠‡∏±‡∏õ‡πÇ‡∏´‡∏•‡∏î‡∏£‡∏π‡∏õ‡∏†‡∏≤‡∏û (‡∏ñ‡πâ‡∏≤‡∏°‡∏µ)
    if (data.image) {
      var folder = DriveApp.getFolderById('1-AN4crW2rYD8qJNVG2LoAeDbI_K0mUvj');
      var blob = Utilities.newBlob(Utilities.base64Decode(data.image.base64), data.image.type, data.image.name);
      var file = folder.createFile(blob);
      var fileLink = "https://lh5.googleusercontent.com/d/" + file.getId();
      
      // ‡πÄ‡∏Å‡πá‡∏ö‡∏•‡∏¥‡∏á‡∏Å‡πå‡∏£‡∏π‡∏õ‡∏†‡∏≤‡∏û‡πÉ‡∏ô‡∏Ñ‡∏≠‡∏•‡∏±‡∏°‡∏ô‡πå‡∏ó‡∏µ‡πà 14
      sheet.getRange(lastRow, 14).setFormula('=IMAGE("' + fileLink + '")');
    }

    return {
      status: 'success',
      message: '‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à'
    };

  } catch (error) {
    Logger.log('Error in submitFormData: ' + error.message);
    return {
      status: 'error',
      message: '‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î: ' + error.message
    };
  }
}

// ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö‡πÅ‡∏Å‡πâ‡πÑ‡∏Ç‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏ó‡∏µ‡πà‡∏°‡∏µ‡∏≠‡∏¢‡∏π‡πà
function updateFormData(data) {
  try {
    var sheetId = "1norHopSjbEQLhow8cQ441axZaZy5WBi9fKmoK-7n8vc";
    var sheetName = "Person";
    var sheet = SpreadsheetApp.openById(sheetId).getSheetByName(sheetName);
    
    // data.id ‡∏Ñ‡∏∑‡∏≠‡πÄ‡∏•‡∏Ç‡πÅ‡∏ñ‡∏ß‡πÉ‡∏ô‡∏ä‡∏µ‡∏ó (‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏à‡∏≤‡∏Å 1)
    const rowIndex = parseInt(data.id);
    
    if (isNaN(rowIndex) || rowIndex < 2) {
      throw new Error('‡πÑ‡∏°‡πà‡∏û‡∏ö‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£‡∏ó‡∏µ‡πà‡∏ï‡πâ‡∏≠‡∏á‡∏Å‡∏≤‡∏£‡πÅ‡∏Å‡πâ‡πÑ‡∏Ç');
    }
    
    // ‡∏≠‡∏±‡∏õ‡πÄ‡∏î‡∏ï‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡πÉ‡∏ô‡πÅ‡∏ñ‡∏ß‡∏ó‡∏µ‡πà‡∏Å‡∏≥‡∏´‡∏ô‡∏î
    sheet.getRange(rowIndex, 2).setValue(new Date(data.datetime)); // ‡∏ß‡∏±‡∏ô‡∏ó‡∏µ‡πà‡∏ó‡∏µ‡πà‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ‡∏Å‡∏£‡∏≠‡∏Å
    sheet.getRange(rowIndex, 3).setValue(data.idCard);
    sheet.getRange(rowIndex, 4).setValue(data.prefix);
    sheet.getRange(rowIndex, 5).setValue(data.fullName);
    sheet.getRange(rowIndex, 6).setValue(data.birthdate);
    sheet.getRange(rowIndex, 7).setValue(data.age);
    sheet.getRange(rowIndex, 8).setValue(data.addressId);
    sheet.getRange(rowIndex, 9).setValue(data.addressCurrent);
    
    // ‡∏ï‡∏±‡πâ‡∏á‡∏Ñ‡πà‡∏≤‡∏£‡∏π‡∏õ‡πÅ‡∏ö‡∏ö‡πÄ‡∏ö‡∏≠‡∏£‡πå‡πÇ‡∏ó‡∏£‡∏®‡∏±‡∏û‡∏ó‡πå
    const phoneRange = sheet.getRange(rowIndex, 10);
    phoneRange.setNumberFormat('@');
    phoneRange.setValue(data.phone);
    
    sheet.getRange(rowIndex, 11).setValue(data.location);
    sheet.getRange(rowIndex, 12).setValue(data.latlong);
    sheet.getRange(rowIndex, 13).setValue(data.details);
    
    // ‡∏à‡∏±‡∏î‡∏Å‡∏≤‡∏£‡∏Å‡∏±‡∏ö‡∏£‡∏π‡∏õ‡∏†‡∏≤‡∏û
    let fileLink = '';
    
    if (data.image) {
      // ‡∏°‡∏µ‡∏Å‡∏≤‡∏£‡∏≠‡∏±‡∏õ‡πÇ‡∏´‡∏•‡∏î‡∏£‡∏π‡∏õ‡πÉ‡∏´‡∏°‡πà
      var folder = DriveApp.getFolderById('1-AN4crW2rYD8qJNVG2LoAeDbI_K0mUvj');
      var blob = Utilities.newBlob(Utilities.base64Decode(data.image.base64), data.image.type, data.image.name);
      var file = folder.createFile(blob);
      fileLink = "https://lh5.googleusercontent.com/d/" + file.getId();
      
      // ‡πÅ‡∏Å‡πâ‡πÑ‡∏Ç‡∏•‡∏¥‡∏á‡∏Å‡πå‡∏£‡∏π‡∏õ‡∏†‡∏≤‡∏û‡πÉ‡∏ô‡∏Ñ‡∏≠‡∏•‡∏±‡∏°‡∏ô‡πå‡∏ó‡∏µ‡πà 14
      sheet.getRange(rowIndex, 14).setFormula('=IMAGE("' + fileLink + '")');
      
    } else if (!data.image && !data.existingImageUrl) {
      // ‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏£‡∏π‡∏õ‡πÄ‡∏î‡∏¥‡∏°‡πÅ‡∏•‡∏∞‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏£‡∏π‡∏õ‡πÉ‡∏´‡∏°‡πà ‡∏•‡∏ö‡∏£‡∏π‡∏õ‡∏ó‡∏µ‡πà‡∏≠‡∏≤‡∏à‡∏à‡∏∞‡∏°‡∏µ‡∏≠‡∏¢‡∏π‡πà‡∏≠‡∏≠‡∏Å
      sheet.getRange(rowIndex, 14).clearContent();
    }
    // ‡∏Å‡∏£‡∏ì‡∏µ‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏Å‡∏≤‡∏£‡∏≠‡∏±‡∏õ‡πÇ‡∏´‡∏•‡∏î‡∏£‡∏π‡∏õ‡πÉ‡∏´‡∏°‡πà ‡πÅ‡∏ï‡πà‡∏°‡∏µ‡∏£‡∏π‡∏õ‡πÄ‡∏î‡∏¥‡∏°‡∏≠‡∏¢‡∏π‡πà‡πÅ‡∏•‡πâ‡∏ß ‡πÑ‡∏°‡πà‡∏ï‡πâ‡∏≠‡∏á‡∏ó‡∏≥‡∏≠‡∏∞‡πÑ‡∏£

    return {
      status: 'success',
      message: '‡πÅ‡∏Å‡πâ‡πÑ‡∏Ç‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à'
    };

  } catch (error) {
    Logger.log('Error in updateFormData: ' + error.message);
    return {
      status: 'error',
      message: '‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î: ' + error.message
    };
  }
}

// ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏ä‡πà‡∏ß‡∏¢‡πÉ‡∏ô‡∏Å‡∏≤‡∏£‡∏£‡∏ß‡∏° HTML
function include(filename) {
  return HtmlService.createHtmlOutputFromFile(filename).getContent();
}
